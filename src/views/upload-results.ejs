<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | FilterFive</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f7fafc;
      color: #2d3748;
      min-height: 100vh;
    }

    .results-container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 20px;
    }

    .success-icon {
      font-size: 48px;
      margin-bottom: 10px;
    }

    .results-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin: 30px 0;
    }

    .result-card {
      background: white;
      border: 1px solid #E5E7EB;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
    }

    .result-card.success {
      border-left: 4px solid #10B981;
    }

    .result-card.failed {
      border-left: 4px solid #EF4444;
    }

    .result-card.duplicate {
      border-left: 4px solid #F59E0B;
    }

    .result-card h2 {
      font-size: 36px;
      margin: 10px 0;
      font-weight: 700;
    }

    .result-card p {
      color: #6B7280;
      margin: 0;
      font-size: 14px;
    }

    .processing-time {
      text-align: center;
      color: #6B7280;
      margin: 20px 0;
      font-size: 14px;
    }

    /* Search/Filter Section */
    .search-section {
      background: white;
      border: 1px solid #E5E7EB;
      border-radius: 8px;
      padding: 20px;
      margin: 20px 0;
    }

    .search-input {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid #D1D5DB;
      border-radius: 6px;
      font-size: 16px;
    }

    .search-input:focus {
      outline: none;
      border-color: #7C3AED;
      box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
    }

    /* Collapsible Sections */
    .collapsible-section {
      background: white;
      border: 1px solid #E5E7EB;
      border-radius: 8px;
      margin: 20px 0;
      overflow: hidden;
    }

    .collapsible-header {
      padding: 20px;
      cursor: pointer;
      background: #F9FAFB;
      display: flex;
      justify-content: space-between;
      align-items: center;
      user-select: none;
    }

    .collapsible-header:hover {
      background: #F3F4F6;
    }

    .collapsible-header.success {
      border-left: 4px solid #10B981;
    }

    .collapsible-header.failed {
      border-left: 4px solid #EF4444;
    }

    .collapsible-header.duplicate {
      border-left: 4px solid #F59E0B;
    }

    .collapsible-header.invalid {
      border-left: 4px solid #9CA3AF;
    }

    .collapsible-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .collapsible-content.open {
      max-height: 3000px;
    }

    .arrow {
      font-size: 20px;
      transition: transform 0.3s ease;
    }

    .arrow.rotated {
      transform: rotate(180deg);
    }

    /* Tables */
    .data-table {
      width: 100%;
      border-collapse: collapse;
    }

    .data-table th,
    .data-table td {
      padding: 12px 16px;
      text-align: left;
      border-bottom: 1px solid #E5E7EB;
    }

    .data-table th {
      background: #F9FAFB;
      font-weight: 600;
      color: #374151;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .data-table tr:hover {
      background: #F9FAFB;
    }

    .data-table td {
      color: #6B7280;
      font-size: 14px;
    }

    .data-table tr:last-child td {
      border-bottom: none;
    }

    .timestamp {
      font-size: 12px;
      color: #9CA3AF;
    }

    .link-button {
      display: inline-block;
      padding: 4px 12px;
      background: #7C3AED;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      font-size: 12px;
      transition: background 0.2s;
    }

    .link-button:hover {
      background: #6D28D9;
    }

    .link-button.secondary {
      background: #10B981;
    }

    .link-button.secondary:hover {
      background: #059669;
    }

    .link-button.danger {
      background: #EF4444;
    }

    .link-button.danger:hover {
      background: #DC2626;
    }

    .twilio-sid {
      font-family: monospace;
      font-size: 11px;
      color: #9CA3AF;
    }

    .error-text {
      color: #DC2626;
      font-size: 13px;
    }

    .no-results {
      padding: 40px;
      text-align: center;
      color: #9CA3AF;
    }

    /* Action Buttons */
    .action-buttons {
      margin-top: 30px;
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      padding: 12px 24px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      display: inline-block;
    }

    .btn-primary {
      background: #7C3AED;
      color: white;
    }

    .btn-primary:hover {
      background: #6D28D9;
    }

    .btn-secondary {
      background: white;
      color: #374151;
      border: 1px solid #D1D5DB;
    }

    .btn-secondary:hover {
      background: #F9FAFB;
    }

    @media (max-width: 768px) {
      .results-summary {
        grid-template-columns: repeat(2, 1fr);
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header', { user }) %>

  <div class="results-container">
    <div style="text-align: center; margin-bottom: 30px;">
      <div class="success-icon">‚úÖ</div>
      <h1>Upload Complete!</h1>
      <p style="color: #6B7280;">File: <strong><%= results.filename %></strong></p>
    </div>

    <!-- Summary Cards -->
    <div class="results-summary">
      <div class="result-card success">
        <h2><%= results.successCount %></h2>
        <p>SMS Sent Successfully</p>
      </div>
      <div class="result-card failed">
        <h2><%= results.failedCount %></h2>
        <p>Failed</p>
      </div>
      <div class="result-card duplicate">
        <h2><%= results.duplicateCount %></h2>
        <p>Duplicates Skipped</p>
      </div>
      <div class="result-card">
        <h2><%= results.totalRows %></h2>
        <p>Total Rows Processed</p>
      </div>
    </div>

    <div class="processing-time">
      ‚è±Ô∏è Processing time: <%= results.processingTimeSeconds %> seconds
    </div>

    <!-- Search/Filter -->
    <div class="search-section">
      <input
        type="text"
        id="searchInput"
        class="search-input"
        placeholder="üîç Search by name, phone number, or error..."
        onkeyup="filterTables()"
      >
    </div>

    <!-- Successfully Sent SMS Table -->
    <% if (results.successfulSends && results.successfulSends.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header success" onclick="toggleSection(this)">
        <strong>‚úÖ Successfully Sent SMS (<%= results.successfulSends.length %>)</strong>
        <span class="arrow">‚ñº</span>
      </div>
      <div class="collapsible-content open">
        <table class="data-table" id="successTable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Time Sent</th>
              <th>Twilio SID</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% results.successfulSends.forEach(function(send) { %>
              <tr>
                <td><%= send.name %></td>
                <td><%= send.phone %></td>
                <td>
                  <%= new Date(send.sentAt).toLocaleString() %>
                  <div class="timestamp"><%= new Date(send.sentAt).toLocaleTimeString() %></div>
                </td>
                <td><span class="twilio-sid"><%= send.twilioSid %></span></td>
                <td>
                  <a href="<%= send.reviewLink %>" target="_blank" class="link-button">
                    View Link
                  </a>
                  <a href="/dashboard/feedback/<%= send.uuid %>" class="link-button secondary">
                    Details
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Failed SMS Table -->
    <% if (results.failedSends && results.failedSends.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header failed" onclick="toggleSection(this)">
        <strong>‚ùå Failed SMS (<%= results.failedSends.length %>)</strong>
        <span class="arrow">‚ñº</span>
      </div>
      <div class="collapsible-content">
        <table class="data-table" id="failedTable">
          <thead>
            <tr>
              <th>Row #</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Error</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% results.failedSends.forEach(function(send) { %>
              <tr>
                <td><%= send.row %></td>
                <td><%= send.name || '-' %></td>
                <td><%= send.phone || '-' %></td>
                <td class="error-text"><%= send.error %></td>
                <td>
                  <button onclick="resendSMS('<%= send.phone %>', '<%= send.name %>')" class="link-button danger">
                    Resend
                  </button>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Duplicates Skipped Table -->
    <% if (results.duplicates && results.duplicates.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header duplicate" onclick="toggleSection(this)">
        <strong>‚ö†Ô∏è Duplicates Skipped (<%= results.duplicates.length %>)</strong>
        <span class="arrow">‚ñº</span>
      </div>
      <div class="collapsible-content">
        <table class="data-table" id="duplicatesTable">
          <thead>
            <tr>
              <th>Row #</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Reason</th>
            </tr>
          </thead>
          <tbody>
            <% results.duplicates.forEach(function(dup) { %>
              <tr>
                <td><%= dup.rowNumber %></td>
                <td><%= dup.name || '-' %></td>
                <td><%= dup.phone || '-' %></td>
                <td class="error-text"><%= dup.error || 'Already sent in last 30 days' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Invalid Rows Table -->
    <% if (results.invalidRows && results.invalidRows.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header invalid" onclick="toggleSection(this)">
        <strong>üö´ Invalid Rows (<%= results.invalidRows.length %>)</strong>
        <span class="arrow">‚ñº</span>
      </div>
      <div class="collapsible-content">
        <table class="data-table" id="invalidTable">
          <thead>
            <tr>
              <th>Row #</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Reason</th>
            </tr>
          </thead>
          <tbody>
            <% results.invalidRows.forEach(function(invalid) { %>
              <tr>
                <td><%= invalid.rowNumber %></td>
                <td><%= invalid.name || '-' %></td>
                <td><%= invalid.phone || '-' %></td>
                <td class="error-text"><%= invalid.error || 'Invalid data format' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <a href="/dashboard/upload" class="btn btn-primary">
        üì§ Upload Another File
      </a>
      <a href="/dashboard/uploads" class="btn btn-secondary">
        üìä View Upload History
      </a>
      <a href="/dashboard" class="btn btn-secondary">
        üè† Back to Dashboard
      </a>
    </div>
  </div>

  <script>
    // Toggle collapsible sections
    function toggleSection(header) {
      const content = header.nextElementSibling;
      const arrow = header.querySelector('.arrow');

      if (content.classList.contains('open')) {
        content.classList.remove('open');
        arrow.classList.remove('rotated');
      } else {
        content.classList.add('open');
        arrow.classList.add('rotated');
      }
    }

    // Filter tables by search input
    function filterTables() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const tables = ['successTable', 'failedTable', 'duplicatesTable', 'invalidTable'];

      tables.forEach(tableId => {
        const table = document.getElementById(tableId);
        if (!table) return;

        const rows = table.getElementsByTagName('tr');
        let visibleCount = 0;

        // Skip header row (index 0)
        for (let i = 1; i < rows.length; i++) {
          const row = rows[i];
          const text = row.textContent.toLowerCase();

          if (text.includes(searchTerm)) {
            row.style.display = '';
            visibleCount++;
          } else {
            row.style.display = 'none';
          }
        }

        // Show "No results" message if all rows hidden
        const tbody = table.getElementsByTagName('tbody')[0];
        let noResultsRow = tbody.querySelector('.no-results-row');

        if (visibleCount === 0 && searchTerm !== '') {
          if (!noResultsRow) {
            noResultsRow = tbody.insertRow();
            noResultsRow.className = 'no-results-row';
            const cell = noResultsRow.insertCell(0);
            cell.colSpan = 100;
            cell.innerHTML = '<div class="no-results">No results found</div>';
          }
        } else if (noResultsRow) {
          noResultsRow.remove();
        }
      });
    }

    // Resend SMS function
    function resendSMS(phone, name) {
      if (!confirm(`Resend SMS to ${name || phone}?`)) {
        return;
      }

      // Create form and submit to send single SMS
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/dashboard/send-single';

      const phoneInput = document.createElement('input');
      phoneInput.type = 'hidden';
      phoneInput.name = 'phone';
      phoneInput.value = phone;
      form.appendChild(phoneInput);

      const nameInput = document.createElement('input');
      nameInput.type = 'hidden';
      nameInput.name = 'name';
      nameInput.value = name || '';
      form.appendChild(nameInput);

      document.body.appendChild(form);
      form.submit();
    }

    // Initialize - open success table by default
    document.addEventListener('DOMContentLoaded', function() {
      const successHeader = document.querySelector('.collapsible-header.success');
      if (successHeader) {
        const arrow = successHeader.querySelector('.arrow');
        if (arrow) {
          arrow.classList.add('rotated');
        }
      }
    });
  </script>
</body>
</html>
