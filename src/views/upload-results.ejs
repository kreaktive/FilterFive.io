<%- include('partials/dashboard-head', { title: title }) %>
  <style>
    .page-header {
      text-align: center;
      margin-bottom: var(--space-8);
    }

    .success-icon {
      font-size: 48px;
      margin-bottom: var(--space-3);
    }

    .page-header h1 {
      font-size: var(--text-3xl);
      color: var(--text-primary);
      margin-bottom: var(--space-2);
    }

    .page-header p {
      color: var(--text-secondary);
    }

    .results-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-4);
      margin-bottom: var(--space-6);
    }

    .result-card {
      background: var(--bg-white);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
      padding: var(--space-5);
      text-align: center;
      box-shadow: var(--shadow-sm);
    }

    .result-card.success {
      border-left: 4px solid var(--success);
    }

    .result-card.failed {
      border-left: 4px solid var(--danger);
    }

    .result-card.duplicate {
      border-left: 4px solid var(--warning);
    }

    .result-card.total {
      border-left: 4px solid var(--brand-gold);
    }

    .result-card h2 {
      font-size: 36px;
      margin: var(--space-2) 0;
      font-weight: 700;
      color: var(--text-primary);
    }

    .result-card p {
      color: var(--text-secondary);
      margin: 0;
      font-size: var(--text-sm);
    }

    .processing-time {
      text-align: center;
      color: var(--text-secondary);
      margin-bottom: var(--space-6);
      font-size: var(--text-sm);
    }

    /* Search/Filter Section */
    .search-section {
      background: var(--bg-white);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
      padding: var(--space-4);
      margin-bottom: var(--space-5);
      box-shadow: var(--shadow-sm);
    }

    .search-input {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid var(--border-light);
      border-radius: var(--radius-md);
      font-size: 16px;
      transition: all var(--transition-base);
    }

    .search-input:focus {
      outline: none;
      border-color: var(--brand-gold);
      box-shadow: 0 0 0 3px rgba(255, 186, 73, 0.15);
    }

    /* Collapsible Sections */
    .collapsible-section {
      background: var(--bg-white);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
      margin-bottom: var(--space-4);
      overflow: hidden;
      box-shadow: var(--shadow-sm);
    }

    .collapsible-header {
      padding: var(--space-4);
      cursor: pointer;
      background: var(--bg-light);
      display: flex;
      justify-content: space-between;
      align-items: center;
      user-select: none;
      transition: background var(--transition-base);
    }

    .collapsible-header:hover {
      background: #F3F4F6;
    }

    .collapsible-header.success {
      border-left: 4px solid var(--success);
    }

    .collapsible-header.failed {
      border-left: 4px solid var(--danger);
    }

    .collapsible-header.duplicate {
      border-left: 4px solid var(--warning);
    }

    .collapsible-header.invalid {
      border-left: 4px solid var(--text-muted);
    }

    .collapsible-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .collapsible-content.open {
      max-height: 3000px;
    }

    .arrow {
      font-size: 20px;
      transition: transform 0.3s ease;
    }

    .arrow.rotated {
      transform: rotate(180deg);
    }

    /* Tables */
    .data-table {
      width: 100%;
      border-collapse: collapse;
    }

    .data-table th,
    .data-table td {
      padding: 12px 16px;
      text-align: left;
      border-bottom: 1px solid var(--border-light);
    }

    .data-table th {
      background: var(--bg-light);
      font-weight: 600;
      color: var(--text-primary);
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .data-table tr:hover {
      background: var(--bg-light);
    }

    .data-table td {
      color: var(--text-secondary);
      font-size: var(--text-sm);
    }

    .data-table tr:last-child td {
      border-bottom: none;
    }

    .timestamp {
      font-size: 12px;
      color: var(--text-muted);
    }

    .link-button {
      display: inline-block;
      padding: 4px 12px;
      background: var(--brand-gold);
      color: var(--brand-dark);
      text-decoration: none;
      border-radius: var(--radius-sm);
      font-size: 12px;
      font-weight: 600;
      transition: all var(--transition-base);
      border: none;
      cursor: pointer;
    }

    .link-button:hover {
      background: var(--brand-gold-dark);
    }

    .link-button.secondary {
      background: var(--success);
      color: white;
    }

    .link-button.secondary:hover {
      background: #059669;
    }

    .link-button.danger {
      background: var(--danger);
      color: white;
    }

    .link-button.danger:hover {
      background: #DC2626;
    }

    .twilio-sid {
      font-family: monospace;
      font-size: 11px;
      color: var(--text-muted);
    }

    .error-text {
      color: var(--danger);
      font-size: 13px;
    }

    .no-results {
      padding: var(--space-8);
      text-align: center;
      color: var(--text-muted);
    }

    /* Action Buttons */
    .action-buttons {
      margin-top: var(--space-8);
      display: flex;
      gap: var(--space-4);
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn {
      padding: 12px 24px;
      border-radius: var(--radius-md);
      text-decoration: none;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: var(--space-2);
      transition: all var(--transition-base);
    }

    .btn-primary {
      background: var(--brand-gold);
      color: var(--brand-dark);
    }

    .btn-primary:hover {
      background: var(--brand-gold-dark);
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: var(--bg-white);
      color: var(--text-primary);
      border: 1px solid var(--border-light);
    }

    .btn-secondary:hover {
      background: var(--bg-light);
      border-color: var(--brand-gold);
    }

    /* Bulk Resend Button */
    .bulk-resend-btn {
      background: var(--danger);
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: var(--radius-md);
      font-size: var(--text-sm);
      font-weight: 600;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      transition: all var(--transition-base);
    }

    .bulk-resend-btn:hover {
      background: #DC2626;
      transform: translateY(-1px);
    }

    .bulk-resend-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    .bulk-resend-btn .spinner {
      display: none;
      width: 14px;
      height: 14px;
      border: 2px solid rgba(255,255,255,0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    .bulk-resend-btn.loading .spinner {
      display: inline-block;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Modal Overlay */
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 20px;
    }

    .modal-overlay.show {
      display: flex;
    }

    .modal {
      background: white;
      border-radius: var(--radius-xl);
      max-width: 450px;
      width: 100%;
      padding: var(--space-6);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .modal-icon {
      font-size: 48px;
      text-align: center;
      margin-bottom: var(--space-4);
    }

    .modal h3 {
      text-align: center;
      color: var(--text-primary);
      margin-bottom: var(--space-2);
    }

    .modal p {
      text-align: center;
      color: var(--text-secondary);
      margin-bottom: var(--space-5);
    }

    .modal-actions {
      display: flex;
      gap: var(--space-3);
      justify-content: center;
    }

    .modal-btn {
      padding: 12px 24px;
      border-radius: var(--radius-md);
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition-base);
      border: none;
    }

    .modal-btn.cancel {
      background: var(--bg-light);
      color: var(--text-primary);
    }

    .modal-btn.cancel:hover {
      background: #e2e8f0;
    }

    .modal-btn.confirm {
      background: var(--danger);
      color: white;
    }

    .modal-btn.confirm:hover {
      background: #DC2626;
    }

    /* Bulk Progress */
    .bulk-progress {
      margin-top: var(--space-4);
      display: none;
    }

    .bulk-progress.show {
      display: block;
    }

    .bulk-progress-bar {
      height: 8px;
      background: var(--bg-light);
      border-radius: 4px;
      overflow: hidden;
      margin-bottom: var(--space-2);
    }

    .bulk-progress-fill {
      height: 100%;
      background: var(--success);
      width: 0%;
      transition: width 0.3s ease;
    }

    .bulk-progress-text {
      font-size: var(--text-sm);
      color: var(--text-secondary);
      text-align: center;
    }

    @media (max-width: 768px) {
      .results-summary {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-3);
      }

      .result-card {
        padding: var(--space-4);
      }

      .result-card h2 {
        font-size: 28px;
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }

      /* Table to Card Conversion */
      .data-table {
        display: block;
      }

      .data-table thead {
        display: none;
      }

      .data-table tbody {
        display: block;
      }

      .data-table tr {
        display: block;
        background: var(--bg-white);
        border-radius: var(--radius-lg);
        padding: 12px;
        margin-bottom: 10px;
        border: 1px solid var(--border-light);
        border-left: 4px solid var(--success);
      }

      .data-table td {
        display: block;
        padding: 6px 0;
        border: none;
        font-size: var(--text-sm);
      }

      .data-table td::before {
        content: attr(data-label);
        display: block;
        font-weight: 600;
        font-size: 11px;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 2px;
      }

      .twilio-sid {
        font-size: 10px;
        word-break: break-all;
      }

      .link-button {
        display: block;
        text-align: center;
        margin-top: 8px;
      }

      .collapsible-header {
        padding: 12px 15px;
        font-size: var(--text-sm);
      }

      .collapsible-content {
        padding: 10px;
      }

      .search-section {
        padding: var(--space-4);
      }

      .timestamp {
        display: none;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/dashboard-header', { activePage: 'upload' }) %>

  <main class="container">
    <div class="page-header">
      <div class="success-icon">&#9989;</div>
      <h1>Upload Complete!</h1>
      <p>File: <strong><%= results.filename %></strong></p>
    </div>

    <!-- Summary Cards -->
    <div class="results-summary">
      <div class="result-card success">
        <h2><%= results.successCount %></h2>
        <p>SMS Sent Successfully</p>
      </div>
      <div class="result-card failed">
        <h2><%= results.failedCount %></h2>
        <p>Failed</p>
      </div>
      <div class="result-card duplicate">
        <h2><%= results.duplicateCount %></h2>
        <p>Duplicates Skipped</p>
      </div>
      <div class="result-card total">
        <h2><%= results.totalRows %></h2>
        <p>Total Rows Processed</p>
      </div>
    </div>

    <div class="processing-time">
      Processing time: <%= results.processingTimeSeconds %> seconds
    </div>

    <!-- Search/Filter -->
    <div class="search-section">
      <input
        type="text"
        id="searchInput"
        class="search-input"
        placeholder="Search by name, phone number, or error..."
        aria-label="Search results by name, phone, or error"
      >
    </div>

    <!-- Successfully Sent SMS Table -->
    <% if (results.successfulSends && results.successfulSends.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header success" id="successHeader">
        <strong>Successfully Sent SMS (<%= results.successfulSends.length %>)</strong>
        <span class="arrow rotated" id="successArrow">&#9660;</span>
      </div>
      <div class="collapsible-content open" id="successContent">
        <table class="data-table" id="successTable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Time Sent</th>
              <th>Twilio SID</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% results.successfulSends.forEach(function(send) { %>
              <tr>
                <td data-label="Name"><%= send.name %></td>
                <td data-label="Phone"><%= send.phone %></td>
                <td data-label="Time Sent">
                  <%= new Date(send.sentAt).toLocaleString() %>
                  <div class="timestamp"><%= new Date(send.sentAt).toLocaleTimeString() %></div>
                </td>
                <td data-label="Twilio SID"><span class="twilio-sid"><%= send.twilioSid %></span></td>
                <td data-label="Actions">
                  <a href="<%= send.reviewLink %>" target="_blank" class="link-button">
                    View Link
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Failed SMS Table -->
    <% if (results.failedSends && results.failedSends.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header failed" id="failedHeader">
        <div style="display: flex; align-items: center; gap: 12px; flex: 1;">
          <strong>Failed SMS (<%= results.failedSends.length %>)</strong>
          <button class="bulk-resend-btn" id="bulkResendBtn" onclick="event.stopPropagation();">
            <span class="spinner"></span>
            Resend All Failed (<span id="failedCountBulk"><%= results.failedSends.length %></span>)
          </button>
        </div>
        <span class="arrow" id="failedArrow">&#9660;</span>
      </div>
      <div class="collapsible-content" id="failedContent">
        <table class="data-table" id="failedTable">
          <thead>
            <tr>
              <th>Row #</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Error</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% results.failedSends.forEach(function(send) { %>
              <tr>
                <td data-label="Row #"><%= send.row %></td>
                <td data-label="Name"><%= send.name || '-' %></td>
                <td data-label="Phone"><%= send.phone || '-' %></td>
                <td data-label="Error" class="error-text"><%= send.error %></td>
                <td data-label="Actions">
                  <button class="link-button danger resend-btn" data-phone="<%= send.phone %>" data-name="<%= send.name %>">
                    Resend
                  </button>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Duplicates Skipped Table -->
    <% if (results.duplicates && results.duplicates.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header duplicate" id="duplicatesHeader">
        <strong>Duplicates Skipped (<%= results.duplicates.length %>)</strong>
        <span class="arrow" id="duplicatesArrow">&#9660;</span>
      </div>
      <div class="collapsible-content" id="duplicatesContent">
        <table class="data-table" id="duplicatesTable">
          <thead>
            <tr>
              <th>Row #</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Reason</th>
            </tr>
          </thead>
          <tbody>
            <% results.duplicates.forEach(function(dup) { %>
              <tr>
                <td data-label="Row #"><%= dup.rowNumber %></td>
                <td data-label="Name"><%= dup.name || '-' %></td>
                <td data-label="Phone"><%= dup.phone || '-' %></td>
                <td data-label="Reason" class="error-text"><%= dup.error || 'Already sent in last 30 days' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Invalid Rows Table -->
    <% if (results.invalidRows && results.invalidRows.length > 0) { %>
    <div class="collapsible-section">
      <div class="collapsible-header invalid" id="invalidHeader">
        <strong>Invalid Rows (<%= results.invalidRows.length %>)</strong>
        <span class="arrow" id="invalidArrow">&#9660;</span>
      </div>
      <div class="collapsible-content" id="invalidContent">
        <table class="data-table" id="invalidTable">
          <thead>
            <tr>
              <th>Row #</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Reason</th>
            </tr>
          </thead>
          <tbody>
            <% results.invalidRows.forEach(function(invalid) { %>
              <tr>
                <td data-label="Row #"><%= invalid.rowNumber %></td>
                <td data-label="Name"><%= invalid.name || '-' %></td>
                <td data-label="Phone"><%= invalid.phone || '-' %></td>
                <td data-label="Reason" class="error-text"><%= invalid.error || 'Invalid data format' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <a href="/dashboard/upload" class="btn btn-primary">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="17 8 12 3 7 8"></polyline>
          <line x1="12" y1="3" x2="12" y2="15"></line>
        </svg>
        Upload Another File
      </a>
      <a href="/dashboard/uploads" class="btn btn-secondary">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        View Upload History
      </a>
      <a href="/dashboard" class="btn btn-secondary">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        Back to Dashboard
      </a>
    </div>
  </main>

  <!-- Bulk Resend Confirmation Modal -->
  <div class="modal-overlay" id="bulkResendModal">
    <div class="modal">
      <div class="modal-icon">&#128172;</div>
      <h3>Resend Failed Messages?</h3>
      <p id="bulkResendMessage">This will resend SMS to <strong><span id="modalFailedCount">0</span></strong> contacts that previously failed.</p>

      <div class="bulk-progress" id="bulkProgress">
        <div class="bulk-progress-bar">
          <div class="bulk-progress-fill" id="bulkProgressFill"></div>
        </div>
        <div class="bulk-progress-text" id="bulkProgressText">Sending 0 / 0...</div>
      </div>

      <div class="modal-actions" id="modalActions">
        <button class="modal-btn cancel" id="cancelBulkResend">Cancel</button>
        <button class="modal-btn confirm" id="confirmBulkResend">Resend All</button>
      </div>
    </div>
  </div>

  <%- include('partials/dashboard-footer') %>

  <script<%- typeof cspNonce !== 'undefined' ? ` nonce="${cspNonce}"` : '' %>>
    document.addEventListener('DOMContentLoaded', function() {
      // Toggle collapsible sections
      var headers = ['success', 'failed', 'duplicates', 'invalid'];
      headers.forEach(function(id) {
        var header = document.getElementById(id + 'Header');
        if (header) {
          header.addEventListener('click', function() {
            var content = document.getElementById(id + 'Content');
            var arrow = document.getElementById(id + 'Arrow');

            if (content.classList.contains('open')) {
              content.classList.remove('open');
              arrow.classList.remove('rotated');
            } else {
              content.classList.add('open');
              arrow.classList.add('rotated');
            }
          });
        }
      });

      // Filter tables by search input
      var searchInput = document.getElementById('searchInput');
      if (searchInput) {
        searchInput.addEventListener('keyup', function() {
          var searchTerm = this.value.toLowerCase();
          var tables = ['successTable', 'failedTable', 'duplicatesTable', 'invalidTable'];

          tables.forEach(function(tableId) {
            var table = document.getElementById(tableId);
            if (!table) return;

            var rows = table.getElementsByTagName('tr');
            var visibleCount = 0;

            // Skip header row (index 0)
            for (var i = 1; i < rows.length; i++) {
              var row = rows[i];
              if (row.classList.contains('no-results-row')) continue;

              var text = row.textContent.toLowerCase();

              if (text.indexOf(searchTerm) !== -1) {
                row.style.display = '';
                visibleCount++;
              } else {
                row.style.display = 'none';
              }
            }

            // Show "No results" message if all rows hidden
            var tbody = table.getElementsByTagName('tbody')[0];
            var noResultsRow = tbody.querySelector('.no-results-row');

            if (visibleCount === 0 && searchTerm !== '') {
              if (!noResultsRow) {
                noResultsRow = document.createElement('tr');
                noResultsRow.className = 'no-results-row';
                var cell = document.createElement('td');
                cell.colSpan = 100;

                var div = document.createElement('div');
                div.className = 'no-results';
                div.textContent = 'No results found';
                cell.appendChild(div);
                noResultsRow.appendChild(cell);
                tbody.appendChild(noResultsRow);
              }
            } else if (noResultsRow) {
              noResultsRow.parentNode.removeChild(noResultsRow);
            }
          });
        });
      }

      // Resend SMS buttons (single)
      var resendButtons = document.querySelectorAll('.resend-btn');
      resendButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          var phone = this.getAttribute('data-phone');
          var name = this.getAttribute('data-name');
          var row = this.closest('tr');
          var button = this;

          if (!confirm('Resend SMS to ' + (name || phone) + '?')) {
            return;
          }

          // Disable button during send
          button.disabled = true;
          button.textContent = 'Sending...';

          // Send via AJAX
          fetch('/dashboard/send-single', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            credentials: 'same-origin',
            body: JSON.stringify({ phone: phone, name: name || '' })
          })
          .then(function(res) { return res.json(); })
          .then(function(data) {
            if (data.success) {
              // Remove row from failed table
              row.style.background = '#D1FAE5';
              setTimeout(function() {
                row.remove();
                updateFailedCount();
              }, 500);

              // Show toast
              if (window.showToast) {
                window.showToast('SMS sent successfully!', 'success');
              }
            } else {
              button.disabled = false;
              button.textContent = 'Resend';
              if (window.showToast) {
                window.showToast(data.error || 'Failed to send SMS', 'error');
              } else {
                alert(data.error || 'Failed to send SMS');
              }
            }
          })
          .catch(function(err) {
            button.disabled = false;
            button.textContent = 'Resend';
            if (window.showToast) {
              window.showToast('Network error. Please try again.', 'error');
            } else {
              alert('Network error. Please try again.');
            }
          });
        });
      });

      // Update failed count after removing rows
      function updateFailedCount() {
        var failedTable = document.getElementById('failedTable');
        if (!failedTable) return;

        var rows = failedTable.querySelectorAll('tbody tr:not(.no-results-row)');
        var count = rows.length;

        // Update header count
        var headerStrong = document.querySelector('#failedHeader strong');
        if (headerStrong) {
          headerStrong.textContent = 'Failed SMS (' + count + ')';
        }

        // Update bulk button count
        var bulkCount = document.getElementById('failedCountBulk');
        if (bulkCount) {
          bulkCount.textContent = count;
        }

        // Update summary card
        var failedCard = document.querySelector('.result-card.failed h2');
        if (failedCard) {
          failedCard.textContent = count;
        }

        // Hide bulk resend button if no more failures
        var bulkBtn = document.getElementById('bulkResendBtn');
        if (bulkBtn && count === 0) {
          bulkBtn.style.display = 'none';
        }
      }

      // Bulk Resend functionality
      var bulkResendBtn = document.getElementById('bulkResendBtn');
      var bulkResendModal = document.getElementById('bulkResendModal');
      var cancelBulkResend = document.getElementById('cancelBulkResend');
      var confirmBulkResend = document.getElementById('confirmBulkResend');
      var modalFailedCount = document.getElementById('modalFailedCount');
      var bulkProgress = document.getElementById('bulkProgress');
      var bulkProgressFill = document.getElementById('bulkProgressFill');
      var bulkProgressText = document.getElementById('bulkProgressText');
      var modalActions = document.getElementById('modalActions');

      if (bulkResendBtn) {
        bulkResendBtn.addEventListener('click', function() {
          // Get current failed count
          var failedTable = document.getElementById('failedTable');
          var rows = failedTable ? failedTable.querySelectorAll('tbody tr:not(.no-results-row)') : [];
          modalFailedCount.textContent = rows.length;

          // Reset modal state
          bulkProgress.classList.remove('show');
          modalActions.style.display = 'flex';
          confirmBulkResend.disabled = false;

          // Show modal
          bulkResendModal.classList.add('show');
        });
      }

      if (cancelBulkResend) {
        cancelBulkResend.addEventListener('click', function() {
          bulkResendModal.classList.remove('show');
        });
      }

      // Close modal on overlay click
      if (bulkResendModal) {
        bulkResendModal.addEventListener('click', function(e) {
          if (e.target === bulkResendModal) {
            bulkResendModal.classList.remove('show');
          }
        });
      }

      // Helper to reset modal actions with close button
      function showCloseButton() {
        // Clear existing buttons
        while (modalActions.firstChild) {
          modalActions.removeChild(modalActions.firstChild);
        }
        // Add close button
        var closeBtn = document.createElement('button');
        closeBtn.className = 'modal-btn cancel';
        closeBtn.textContent = 'Close';
        closeBtn.addEventListener('click', function() {
          bulkResendModal.classList.remove('show');
        });
        modalActions.appendChild(closeBtn);
        modalActions.style.display = 'flex';
      }

      if (confirmBulkResend) {
        confirmBulkResend.addEventListener('click', async function() {
          var failedTable = document.getElementById('failedTable');
          var rows = failedTable ? Array.from(failedTable.querySelectorAll('tbody tr:not(.no-results-row)')) : [];

          if (rows.length === 0) {
            bulkResendModal.classList.remove('show');
            return;
          }

          // Show progress, hide actions
          bulkProgress.classList.add('show');
          modalActions.style.display = 'none';

          var total = rows.length;
          var sent = 0;
          var succeeded = 0;
          var failed = 0;

          // Process each row sequentially
          for (var i = 0; i < rows.length; i++) {
            var row = rows[i];
            var btn = row.querySelector('.resend-btn');
            if (!btn) continue;

            var phone = btn.getAttribute('data-phone');
            var name = btn.getAttribute('data-name');

            // Update progress
            sent++;
            var percent = (sent / total) * 100;
            bulkProgressFill.style.width = percent + '%';
            bulkProgressText.textContent = 'Sending ' + sent + ' / ' + total + '...';

            try {
              var response = await fetch('/dashboard/send-single', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                credentials: 'same-origin',
                body: JSON.stringify({ phone: phone, name: name || '' })
              });

              var data = await response.json();

              if (data.success) {
                succeeded++;
                row.style.background = '#D1FAE5';
                setTimeout((function(r) {
                  return function() { r.remove(); };
                })(row), 300);
              } else {
                failed++;
              }
            } catch (err) {
              failed++;
            }

            // Small delay between sends to avoid rate limiting
            await new Promise(function(resolve) { setTimeout(resolve, 200); });
          }

          // Update counts
          updateFailedCount();

          // Show completion
          bulkProgressText.textContent = 'Done! ' + succeeded + ' sent, ' + failed + ' failed.';
          bulkProgressFill.style.background = succeeded > 0 ? 'var(--success)' : 'var(--danger)';

          // Show close button after completion
          setTimeout(function() {
            showCloseButton();
          }, 1000);

          // Show toast
          if (window.showToast) {
            if (succeeded > 0) {
              window.showToast(succeeded + ' SMS resent successfully!', 'success');
            }
            if (failed > 0) {
              window.showToast(failed + ' SMS failed to send', 'error');
            }
          }
        });
      }
    });
  </script>
</body>
