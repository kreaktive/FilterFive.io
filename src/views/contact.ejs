<%
const contactStyles = `
  .font-title { font-family: 'Rubik', sans-serif; }
`;
%>
<%- include('partials/head', {
  title: 'Contact Us - Get in Touch | MoreStars',
  description: 'Have questions about MoreStars review management software? Contact our support team for help with sales, billing, integrations, or general inquiries.',
  extraStyles: contactStyles
}) %>

<% const activePage = 'contact'; %>
<%- include('partials/navbar') %>

<main id="main-content" role="main">
  <!-- Hero Section -->
  <section class="pt-24 pb-20 bg-[#F9F7FA] border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 font-title text-[#500B42]">
        Questions? Get in Touch.
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        We're here to help with sales, support, billing, partnerships, or any other questions about MoreStars.
      </p>
    </div>
  </section>

  <!-- Main Content Layout -->
  <section class="py-12 md:py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-12 gap-12">

        <!-- Sidebar Navigation (Desktop) -->
        <div class="hidden lg:block lg:col-span-3">
          <div class="sticky top-28 space-y-8">

            <!-- Quick Contact Card -->
            <div class="bg-[#500A42] text-white p-6 rounded-2xl shadow-lg relative overflow-hidden">
              <!-- Decorative element -->
              <div class="absolute top-0 right-0 w-20 h-20 bg-[#FFBA49] rounded-full blur-2xl opacity-20 -mr-10 -mt-10"></div>

              <h3 class="font-bold text-lg mb-6 relative z-10">Quick Contact</h3>

              <!-- Phone -->
              <div class="mb-6 relative z-10">
                <p class="text-gray-300 text-xs uppercase tracking-wider mb-2">Call Us</p>
                <a href="tel:+17199675177" class="text-[#FFBA49] font-semibold hover:underline text-lg">(719) 967-5177</a>
                <p class="text-gray-400 text-xs mt-1">Mon-Fri, 9am-6pm EST</p>
              </div>

              <!-- Email -->
              <div class="mb-6 pt-6 border-t border-gray-700 relative z-10">
                <p class="text-gray-300 text-xs uppercase tracking-wider mb-2">Email</p>
                <a href="mailto:support@morestars.io" class="text-[#FFBA49] font-semibold hover:underline break-all text-sm">support@morestars.io</a>
              </div>

            </div>

            <!-- Response Time Card -->
            <div class="space-y-2">
              <h3 class="font-bold text-gray-400 uppercase tracking-wider text-xs px-3 mb-4">Response Time</h3>
              <div class="bg-gray-50 rounded-lg p-4 text-center border border-gray-200">
                <div class="text-3xl font-bold text-[#FFBA49] mb-1">24h</div>
                <p class="text-sm text-gray-600">Average response time</p>
              </div>
            </div>

          </div>
        </div>

        <!-- Contact Form (col-span-9) -->
        <div class="lg:col-span-9">

          <!-- Form Card -->
          <div class="bg-white rounded-2xl border border-gray-200 p-8 md:p-10">
            <h2 class="text-3xl font-bold font-title text-[#500B42] mb-8">Send Us a Message</h2>

            <form method="POST" action="/contact" id="contact-form">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <!-- Two Column Grid for Name & Email -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-[#500B42] mb-2">
                    Name <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#FFBA49] focus:border-transparent outline-none transition"
                    aria-describedby="name-error"
                  >
                  <span id="name-error" class="text-red-500 text-xs mt-1 hidden block"></span>
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-[#500B42] mb-2">
                    Email <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#FFBA49] focus:border-transparent outline-none transition"
                    aria-describedby="email-error"
                  >
                  <span id="email-error" class="text-red-500 text-xs mt-1 hidden block"></span>
                </div>
              </div>

              <!-- Two Column Grid for Phone & Business -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <label for="phone" class="block text-sm font-semibold text-[#500B42] mb-2">
                    Phone Number <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder="(555) 123-4567"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#FFBA49] focus:border-transparent outline-none transition"
                    aria-describedby="phone-error"
                  >
                  <span id="phone-error" class="text-red-500 text-xs mt-1 hidden block"></span>
                </div>

                <div>
                  <label for="businessName" class="block text-sm font-semibold text-[#500B42] mb-2">
                    Business Name <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="businessName"
                    name="businessName"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#FFBA49] focus:border-transparent outline-none transition"
                    aria-describedby="businessName-error"
                  >
                  <span id="businessName-error" class="text-red-500 text-xs mt-1 hidden block"></span>
                </div>
              </div>

              <!-- Topic Dropdown (Full Width) -->
              <div class="mb-6">
                <label for="topic" class="block text-sm font-semibold text-[#500B42] mb-2">
                  Topic <span class="text-red-500">*</span>
                </label>
                <select
                  id="topic"
                  name="topic"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#FFBA49] focus:border-transparent outline-none transition bg-white"
                  aria-describedby="topic-error"
                >
                  <option value="">Select a topic</option>
                  <option value="sales">Sales Question</option>
                  <option value="support">Technical Support</option>
                  <option value="billing">Billing Question</option>
                  <option value="partnership">Partnership Opportunity</option>
                  <option value="general">General Inquiry</option>
                </select>
                <span id="topic-error" class="text-red-500 text-xs mt-1 hidden block"></span>
              </div>

              <!-- Message Textarea (Full Width) -->
              <div class="mb-8">
                <label for="message" class="block text-sm font-semibold text-[#500B42] mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                  <textarea
                    id="message"
                    name="message"
                    rows="6"
                    placeholder="Tell us what's on your mind..."
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#FFBA49] focus:border-transparent outline-none transition resize-none"
                    aria-describedby="message-error message-counter"
                  ></textarea>
                  <div id="message-counter" class="text-xs text-gray-500 mt-2 text-right">0 / 2000</div>
                </div>
                <span id="message-error" class="text-red-500 text-xs mt-1 hidden block"></span>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-[#FFBA49] to-[#FFD700] text-[#500B42] font-bold py-3 px-6 rounded-lg hover:shadow-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed"
              >
                Send Message
              </button>

              <!-- Success Message (hidden initially) -->
              <div id="success-message" class="mt-6 p-4 bg-green-50 border border-green-200 rounded-lg hidden">
                <h4 class="font-semibold text-green-800 mb-2">Message Sent!</h4>
                <p class="text-green-700 text-sm">Thank you! We received your message and will respond within 24 hours.</p>
              </div>

              <!-- Error Message (hidden initially) -->
              <div id="error-message" class="mt-6 p-4 bg-red-50 border border-red-200 rounded-lg hidden">
                <h4 class="font-semibold text-red-800 mb-2">Error</h4>
                <p id="error-text" class="text-red-700 text-sm"></p>
              </div>
            </form>
          </div>

        </div>

      </div>
    </div>
  </section>
</main>

<%- include('partials/marketing-footer') %>
<%- include('partials/scripts') %>

<script src="/js/contact-form.js" nonce="<%= cspNonce %>"></script>
