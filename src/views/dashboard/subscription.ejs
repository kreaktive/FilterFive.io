<%- include('../partials/dashboard-head', { title: title }) %>
  <script src="https://js.stripe.com/v3/"></script>
  <style>
    .page-title {
      margin-bottom: var(--space-8);
    }

    .page-title h2 {
      font-size: var(--text-2xl);
      color: var(--brand-dark);
      margin-bottom: var(--space-1);
    }

    .page-title p {
      color: var(--text-secondary);
      font-size: var(--text-base);
    }

    .status-card {
      background: var(--bg-white);
      border-radius: var(--radius-xl);
      padding: var(--space-6);
      margin-bottom: var(--space-8);
      box-shadow: var(--shadow-md);
    }

    .status-badge {
      display: inline-block;
      padding: var(--space-2) var(--space-4);
      border-radius: 20px;
      font-size: var(--text-sm);
      font-weight: 600;
      margin-bottom: var(--space-4);
    }

    .status-active {
      background: #d1fae5;
      color: #065f46;
    }

    .status-trial {
      background: #dbeafe;
      color: #1e40af;
    }

    .status-cancelled {
      background: #fee2e2;
      color: #991b1b;
    }

    .status-past-due {
      background: #fef3c7;
      color: #92400e;
    }

    .status-info {
      font-size: var(--text-base);
      color: var(--text-secondary);
      line-height: 1.6;
    }

    .status-info strong {
      color: var(--text-primary);
    }

    /* Modern Plan Cards */
    .plans-container {
      display: flex;
      justify-content: center;
      gap: var(--space-6);
      margin-bottom: var(--space-8);
      flex-wrap: wrap;
    }

    .plan-card {
      background: var(--bg-white);
      border-radius: var(--radius-xl);
      padding: var(--space-8);
      box-shadow: var(--shadow-lg);
      border: 2px solid transparent;
      transition: all 0.3s ease;
      width: 100%;
      max-width: 380px;
      position: relative;
    }

    .plan-card::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 160px;
      height: 160px;
      background: linear-gradient(135deg, rgba(255, 186, 73, 0.1) 0%, transparent 60%);
      border-radius: 0 0 0 100%;
      pointer-events: none;
    }

    .plan-card:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-gold);
      border-color: var(--brand-gold);
    }

    .plan-card.recommended {
      border-color: var(--brand-gold);
      position: relative;
    }

    .recommended-badge {
      position: absolute;
      top: -14px;
      left: 50%;
      transform: translateX(-50%);
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      font-size: var(--text-xs);
      font-weight: 700;
      padding: var(--space-2) var(--space-4);
      border-radius: 20px;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      white-space: nowrap;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
      z-index: 10;
    }

    .plan-header {
      text-align: left;
      margin-bottom: var(--space-6);
      position: relative;
      z-index: 1;
    }

    .plan-name {
      font-size: var(--text-lg);
      font-weight: 600;
      color: var(--text-muted);
      margin-bottom: var(--space-2);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .plan-price {
      display: flex;
      align-items: baseline;
      gap: var(--space-1);
      margin-bottom: var(--space-1);
    }

    .plan-price .amount {
      font-size: 48px;
      font-weight: 800;
      color: var(--brand-dark);
      line-height: 1;
    }

    .plan-price .period {
      font-size: var(--text-lg);
      font-weight: 500;
      color: var(--text-muted);
    }

    .plan-savings {
      font-size: var(--text-sm);
      color: #10b981;
      font-weight: 600;
      margin-top: var(--space-1);
    }

    .plan-subtitle {
      font-size: var(--text-sm);
      color: var(--text-muted);
      margin-top: var(--space-1);
    }

    .plan-features {
      list-style: none;
      margin: var(--space-6) 0;
      padding: 0;
      position: relative;
      z-index: 1;
    }

    .plan-features li {
      padding: var(--space-3) 0;
      color: var(--text-secondary);
      display: flex;
      align-items: center;
      gap: var(--space-3);
      font-size: var(--text-base);
      font-weight: 500;
    }

    .plan-features li .check-icon {
      width: 20px;
      height: 20px;
      color: #10b981;
      flex-shrink: 0;
    }

    .btn-subscribe {
      width: 100%;
      padding: var(--space-4) var(--space-6);
      background: var(--brand-gold);
      color: var(--brand-dark);
      border: none;
      border-radius: var(--radius-lg);
      font-size: var(--text-base);
      font-weight: 700;
      cursor: pointer;
      transition: all var(--transition-base);
      position: relative;
      z-index: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-2);
    }

    .btn-subscribe:hover {
      background: var(--brand-dark);
      color: white;
      transform: translateY(-2px);
      box-shadow: var(--shadow-gold);
    }

    .btn-subscribe:active {
      transform: translateY(0);
    }

    .btn-subscribe:disabled {
      background: var(--border-light);
      color: var(--text-muted);
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .btn-subscribe svg {
      width: 20px;
      height: 20px;
    }

    .btn-cancel {
      width: 100%;
      padding: var(--space-4);
      background: var(--bg-white);
      color: var(--brand-negative);
      border: 2px solid var(--brand-negative);
      border-radius: var(--radius-lg);
      font-size: var(--text-base);
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition-base);
      margin-top: var(--space-4);
    }

    .btn-cancel:hover {
      background: var(--brand-negative);
      color: white;
    }

    .btn-portal {
      width: 100%;
      padding: var(--space-4);
      background: var(--bg-white);
      color: var(--brand-dark);
      border: 2px solid var(--brand-gold);
      border-radius: var(--radius-lg);
      font-size: var(--text-base);
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition-base);
      margin-top: var(--space-4);
      text-decoration: none;
      display: block;
      text-align: center;
    }

    .btn-portal:hover {
      background: var(--brand-gold);
      color: var(--brand-dark);
    }

    .alert-warning {
      background: #fef3c7;
      border-left: 4px solid #f59e0b;
      padding: var(--space-4);
      margin-bottom: var(--space-5);
      border-radius: var(--radius-md);
      color: #92400e;
    }

    .alert-success {
      background: #d1fae5;
      border-left: 4px solid #10b981;
      padding: var(--space-4);
      margin-bottom: var(--space-5);
      border-radius: var(--radius-md);
      color: #065f46;
    }

    .guarantee-badges {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: var(--space-4);
      margin-top: var(--space-6);
      padding-top: var(--space-6);
      border-top: 1px solid var(--border-light);
    }

    .guarantee-badge {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      font-size: var(--text-xs);
      font-weight: 600;
      color: var(--text-muted);
    }

    .guarantee-badge svg {
      width: 16px;
      height: 16px;
      color: var(--brand-gold);
    }

    #loading {
      display: none;
      text-align: center;
      padding: var(--space-5);
      color: var(--brand-gold);
      font-weight: 600;
    }

    @media (max-width: 768px) {
      .plans-container {
        flex-direction: column;
        align-items: center;
      }

      .plan-card {
        padding: var(--space-6);
      }

      .plan-price .amount {
        font-size: 40px;
      }

      .guarantee-badges {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/dashboard-header', { activePage: 'subscription' }) %>

  <main id="main-content" class="container">
    <div class="page-title">
      <h2>Subscription</h2>
      <p>Manage your MoreStars subscription and billing</p>
    </div>

    <!-- Current Status Card -->
    <div class="status-card">
      <% if (trialStatus.hasActiveSubscription) { %>
        <span class="status-badge status-active">&#10003; Active Subscription</span>
        <div class="status-info">
          <p><strong>Plan:</strong> <%= user.subscriptionPlan === 'monthly' ? 'Monthly ($77/mo)' : 'Annual ($770/yr)' %></p>
          <% if (subscriptionDetails && subscriptionDetails.current_period_end) { %>
            <p><strong>Next billing date:</strong> <%= new Date(subscriptionDetails.current_period_end * 1000).toLocaleDateString() %></p>
          <% } %>
          <p><strong>SMS Sent:</strong> <%= user.smsUsageCount %> / <%= user.smsUsageLimit %></p>
        </div>
      <% } else if (trialStatus.isActive) { %>
        <span class="status-badge status-trial">&#127873; Free Trial Active</span>
        <div class="status-info">
          <p><strong>Trial ends:</strong> <%= new Date(trialStatus.trialEndsAt).toLocaleDateString() %></p>
          <p><strong>SMS Sent:</strong> <%= user.smsUsageCount %> / <%= user.smsUsageLimit %></p>
          <p>Upgrade to unlock 1,000 SMS per month!</p>
        </div>
      <% } else if (trialStatus.isInGracePeriod) { %>
        <span class="status-badge status-past-due">&#9888; Trial Expired - Grace Period</span>
        <div class="alert-warning">
          <strong>Your trial has expired.</strong><br>
          You have a 5-day grace period to upgrade. After that, your account will be locked.
        </div>
      <% } else if (trialStatus.isHardLocked) { %>
        <span class="status-badge status-cancelled">&#128274; Account Locked</span>
        <div class="alert-warning">
          <strong>Your account is locked.</strong><br>
          Please upgrade to a paid plan to continue using MoreStars.
        </div>
      <% } else if (user.subscriptionStatus === 'cancelled') { %>
        <span class="status-badge status-cancelled">Cancelled</span>
        <div class="status-info">
          <p>Your subscription has been cancelled.</p>
          <% if (subscriptionDetails && subscriptionDetails.current_period_end) { %>
            <p><strong>Access until:</strong> <%= new Date(subscriptionDetails.current_period_end * 1000).toLocaleDateString() %></p>
          <% } %>
        </div>
      <% } else if (user.subscriptionStatus === 'past_due') { %>
        <span class="status-badge status-past-due">&#9888; Payment Failed</span>
        <div class="alert-warning">
          <strong>Your last payment failed.</strong><br>
          Please update your payment method to avoid service interruption.
        </div>
      <% } %>
    </div>

    <!-- Show pricing plans if no active subscription -->
    <% if (!trialStatus.hasActiveSubscription) { %>
      <div class="plans-container">
        <!-- Monthly Plan -->
        <div class="plan-card" id="plan-monthly">
          <div class="plan-header">
            <div class="plan-name">Monthly</div>
            <div class="plan-price">
              <span class="amount">$77</span>
              <span class="period">/month</span>
            </div>
            <div class="plan-subtitle">Cancel anytime</div>
          </div>

          <ul class="plan-features">
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>1,000 SMS messages/month</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Unlimited QR codes</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Google, Yelp, Facebook & more</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Review filtering & capture</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>POS integrations (Square, Shopify...)</span>
            </li>
          </ul>

          <button class="btn-subscribe" id="btn-monthly" data-plan="monthly">
            Subscribe Monthly
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </button>
        </div>

        <!-- Annual Plan -->
        <div class="plan-card recommended" id="plan-annual">
          <div class="recommended-badge">Best Value</div>
          <div class="plan-header">
            <div class="plan-name">Annual</div>
            <div class="plan-price">
              <span class="amount">$770</span>
              <span class="period">/year</span>
            </div>
            <div class="plan-savings">Save $154/year (2 months free!)</div>
          </div>

          <ul class="plan-features">
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>1,000 SMS messages/month</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Unlimited QR codes</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Google, Yelp, Facebook & more</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Review filtering & capture</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>POS integrations (Square, Shopify...)</span>
            </li>
            <li>
              <svg class="check-icon" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
              <span>Priority support</span>
            </li>
          </ul>

          <button class="btn-subscribe" id="btn-annual" data-plan="annual">
            Subscribe Annually
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </button>
        </div>
      </div>

      <!-- Guarantee Badges -->
      <div class="guarantee-badges">
        <div class="guarantee-badge">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          14-Day Free Trial
        </div>
        <div class="guarantee-badge">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>
          Secure Payment
        </div>
        <div class="guarantee-badge">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
          Cancel Anytime
        </div>
      </div>
    <% } %>

    <!-- Subscription Management (if active) -->
    <% if (trialStatus.hasActiveSubscription) { %>
      <div class="status-card">
        <h3 style="margin-bottom: 15px; color: #2d3748;">Manage Subscription</h3>

        <a href="/dashboard/subscription/portal" class="btn-portal">
          Manage Billing & Payment Methods
        </a>

        <button class="btn-cancel" id="btn-cancel">
          Cancel Subscription
        </button>

        <p style="margin-top: 15px; font-size: 13px; color: #718096; text-align: center;">
          Cancelling will disable your subscription at the end of the current billing period.
        </p>
      </div>
    <% } %>

    <div id="loading">Processing...</div>

    <!-- Hidden inputs for JS -->
    <input type="hidden" id="csrf-token" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
    <input type="hidden" id="stripe-key" value="<%= stripePubKey %>">
  </main>

  <script src="/js/subscription.min.js?v=<%= typeof assetVersion !== 'undefined' ? assetVersion : '1.0.0' %>"></script>
  <%- include('../partials/dashboard-footer') %>
  <script src="/js/dashboard-menu.min.js?v=<%= typeof assetVersion !== 'undefined' ? assetVersion : '1.0.0' %>"></script>
</body>
</html>
