              <label for="reviewValueEstimate">Estimated Value Per Review ($)</label>
              <input
                type="number"
                id="reviewValueEstimate"
                name="reviewValueEstimate"
                value="<%= user.reviewValueEstimate || 80 %>"
                min="1"
                max="10000"
                step="1"
                style="width: 100%; padding: 12px 15px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 16px;"
              >
              <div class="help-text">
                How much is each positive review worth to your business?
                Industry average is $50-150 per review based on customer lifetime value and referral impact.
                <br><br>
                <strong>Tip:</strong> Consider that reviews improve search rankings, build trust with new customers, and can lead to repeat business.
              </div>
            </div>
          </div>

          <button type="submit" class="btn-save" id="saveSettingsBtn">
            Save Changes
          </button>
        </form>
      </div>

      <!-- POS Integration Tab -->
      <div id="tab-pos" class="tab-content">
        <div class="form-section">
          <h3 style="display: flex; justify-content: space-between; align-items: center;">
            Connect Your POS System
            <a href="/dashboard/pos-guide" style="font-size: 14px; font-weight: 500; color: var(--brand-gold); text-decoration: none;">View Setup Guide &rarr;</a>
          </h3>
          <p style="color: #718096; margin-bottom: 20px;">
            Automatically send SMS review requests when customers make purchases at your store.
          </p>

          <% if (!user.reviewUrl) { %>
            <div class="warning-box">
              <strong>Setup Required:</strong> Before connecting a POS system, please set up your Review Platform URL in the <a href="/dashboard/settings?tab=general" style="color: inherit; text-decoration: underline;">General tab</a>. SMS messages won't be sent without a review link.
            </div>
          <% } %>

          <%
            // Count connected integrations per category
            const posConnected = (typeof squareIntegration !== 'undefined' && squareIntegration && squareIntegration.isActive ? 1 : 0) +
                                (typeof cloverIntegration !== 'undefined' && cloverIntegration && cloverIntegration.isActive ? 1 : 0);
            const ecomConnected = (typeof shopifyIntegration !== 'undefined' && shopifyIntegration && shopifyIntegration.isActive ? 1 : 0) +
                                 (typeof woocommerceIntegration !== 'undefined' && woocommerceIntegration && woocommerceIntegration.isActive ? 1 : 0) +
                                 (typeof stripeIntegration !== 'undefined' && stripeIntegration && stripeIntegration.isActive ? 1 : 0);
            const autoConnected = (typeof zapierIntegration !== 'undefined' && zapierIntegration && zapierIntegration.isActive ? 1 : 0) +
                                 (typeof webhookIntegration !== 'undefined' && webhookIntegration && webhookIntegration.isActive ? 1 : 0);
          %>

          <!-- Accordion -->
          <div class="accordion">
            <!-- Point of Sale Section -->
            <div class="accordion-item">
              <div class="accordion-header active" data-accordion="pos">
                <div class="accordion-title">
                  <span class="icon">&#128179;</span>
                  Point of Sale (In-Store)
                </div>
                <div class="accordion-meta">
                  <span class="accordion-preview">Square, Clover</span>
                  <span class="accordion-badge <%= posConnected > 0 ? 'has-connected' : '' %>"><%= posConnected %> of 2</span>
                  <span class="accordion-chevron">&#9660;</span>
                </div>
              </div>
              <div class="accordion-content active" id="accordion-pos">
                <div class="integration-grid">
                  <!-- Square -->
                  <div class="integration-card-mini <%= typeof squareIntegration !== 'undefined' && squareIntegration && squareIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      Square
                      <% if (typeof squareIntegration !== 'undefined' && squareIntegration && squareIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } %>
                    </h5>
                    <p>Send review requests after each Square payment.</p>
                    <% if (typeof squareIntegration !== 'undefined' && squareIntegration && squareIntegration.isActive) { %>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/square" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <a href="/api/auth/square/connect" class="btn-connect-small">Connect Square</a>
                    <% } %>
                  </div>

                  <!-- Clover -->
                  <div class="integration-card-mini <%= typeof cloverIntegration !== 'undefined' && cloverIntegration && cloverIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      Clover
                      <% if (typeof cloverIntegration !== 'undefined' && cloverIntegration && cloverIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } else { %>
                        <span class="coming-soon-badge">Coming Soon</span>
                      <% } %>
                    </h5>
                    <p>Send review requests after Clover payments.</p>
                    <% if (typeof cloverIntegration !== 'undefined' && cloverIntegration && cloverIntegration.isActive) { %>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/clover" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <button class="btn-connect-small" disabled style="opacity: 0.5; cursor: not-allowed;">Coming Soon</button>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>

            <!-- E-Commerce Section -->
            <div class="accordion-item">
              <div class="accordion-header" data-accordion="ecommerce">
                <div class="accordion-title">
                  <span class="icon">&#128722;</span>
                  E-Commerce (Online)
                </div>
                <div class="accordion-meta">
                  <span class="accordion-preview">Shopify, WooCommerce, Stripe</span>
                  <span class="accordion-badge <%= ecomConnected > 0 ? 'has-connected' : '' %>"><%= ecomConnected %> of 3</span>
                  <span class="accordion-chevron">&#9660;</span>
                </div>
              </div>
              <div class="accordion-content" id="accordion-ecommerce">
                <div class="integration-grid">
                  <!-- Shopify -->
                  <div class="integration-card-mini <%= typeof shopifyIntegration !== 'undefined' && shopifyIntegration && shopifyIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      Shopify
                      <% if (typeof shopifyIntegration !== 'undefined' && shopifyIntegration && shopifyIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } %>
                    </h5>
                    <p>Send review requests after Shopify orders.</p>
                    <% if (typeof shopifyIntegration !== 'undefined' && shopifyIntegration && shopifyIntegration.isActive) { %>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/shopify" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                        <input type="text" id="shopifyShopInput" placeholder="store.myshopify.com" style="flex: 1; min-width: 150px; padding: 8px; border: 1px solid #e2e8f0; border-radius: 6px; font-size: 13px;">
                        <button type="button" class="btn-connect-small" id="shopifyConnectBtn">Connect</button>
                      </div>
                    <% } %>
                  </div>

                  <!-- WooCommerce -->
                  <div class="integration-card-mini <%= typeof woocommerceIntegration !== 'undefined' && woocommerceIntegration && woocommerceIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      WooCommerce
                      <% if (typeof woocommerceIntegration !== 'undefined' && woocommerceIntegration && woocommerceIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } %>
                    </h5>
                    <p>Send review requests after WooCommerce orders.</p>
                    <% if (typeof woocommerceIntegration !== 'undefined' && woocommerceIntegration && woocommerceIntegration.isActive) { %>
                      <div style="font-size: 12px; color: #718096; margin-bottom: 10px;">
                        Store: <%= woocommerceIntegration.storeUrl %>
                      </div>
                      <a href="/dashboard/woocommerce-setup" class="btn-connect-small" style="margin-right: 8px;">Webhook Setup</a>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/woocommerce" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <button type="button" class="btn-connect-small" id="woocommerceConnectBtn">Setup WooCommerce</button>
                    <% } %>
                  </div>

                  <!-- Stripe -->
                  <div class="integration-card-mini <%= typeof stripeIntegration !== 'undefined' && stripeIntegration && stripeIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      Stripe
                      <% if (typeof stripeIntegration !== 'undefined' && stripeIntegration && stripeIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } %>
                    </h5>
                    <p>Send review requests for Stripe payments (Checkout & Terminal).</p>
                    <% if (typeof stripeIntegration !== 'undefined' && stripeIntegration && stripeIntegration.isActive) { %>
                      <div style="margin-bottom: 12px; font-size: 13px;">
                        <label style="display: flex; align-items: center; gap: 8px; margin-bottom: 6px; font-weight: normal; cursor: pointer;">
                          <input type="checkbox" <%= stripeIntegration.triggerOnCheckout ? 'checked' : '' %> disabled style="width: 16px; height: 16px;">
                          Stripe Checkout (online)
                        </label>
                        <label style="display: flex; align-items: center; gap: 8px; font-weight: normal; cursor: pointer;">
                          <input type="checkbox" <%= stripeIntegration.triggerOnTerminal ? 'checked' : '' %> disabled style="width: 16px; height: 16px;">
                          Stripe Terminal (in-store)
                        </label>
                      </div>
                      <a href="#" class="btn-connect-small" style="margin-right: 8px;" id="stripeSettingsBtn">Settings</a>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/stripe_pos" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <button type="button" class="btn-connect-small" id="stripeConnectBtn">Enable Stripe</button>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Automation Section -->
            <div class="accordion-item">
              <div class="accordion-header" data-accordion="automation">
                <div class="accordion-title">
                  <span class="icon">&#9889;</span>
                  Automation & Custom
                </div>
                <div class="accordion-meta">
                  <span class="accordion-preview">Zapier, Custom Webhook</span>
                  <span class="accordion-badge <%= autoConnected > 0 ? 'has-connected' : '' %>"><%= autoConnected %> of 2</span>
                  <span class="accordion-chevron">&#9660;</span>
                </div>
              </div>
              <div class="accordion-content" id="accordion-automation">
                <div class="info-box" style="margin-bottom: 16px;">
                  <strong>Connect any POS system!</strong> Use Zapier to connect 6,000+ apps, or set up a custom webhook for direct integration.
                </div>
                <div class="integration-grid">
                  <!-- Zapier -->
                  <div class="integration-card-mini <%= typeof zapierIntegration !== 'undefined' && zapierIntegration && zapierIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      Zapier
                      <% if (typeof zapierIntegration !== 'undefined' && zapierIntegration && zapierIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } %>
                    </h5>
                    <p>Connect 6,000+ apps including Toast, Clover, Lightspeed & more via Zapier.</p>
                    <% if (typeof zapierIntegration !== 'undefined' && zapierIntegration && zapierIntegration.isActive) { %>
                      <a href="/dashboard/webhook-setup?provider=zapier" class="btn-connect-small" style="margin-right: 8px;">View Setup</a>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/zapier" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <button type="button" class="btn-connect-small" id="zapierSetupBtn">Setup Zapier</button>
                    <% } %>
                  </div>

                  <!-- Custom Webhook -->
                  <div class="integration-card-mini <%= typeof webhookIntegration !== 'undefined' && webhookIntegration && webhookIntegration.isActive ? 'connected' : '' %>">
                    <h5>
                      Custom Webhook
                      <% if (typeof webhookIntegration !== 'undefined' && webhookIntegration && webhookIntegration.isActive) { %>
                        <span class="status-badge connected">Connected</span>
                      <% } %>
                    </h5>
                    <p>For developers: Send transaction data directly via HTTP webhook.</p>
                    <% if (typeof webhookIntegration !== 'undefined' && webhookIntegration && webhookIntegration.isActive) { %>
                      <a href="/dashboard/webhook-setup?provider=webhook" class="btn-connect-small" style="margin-right: 8px;">View Setup</a>
                      <form method="POST" action="/dashboard/settings/pos/disconnect/webhook" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <button type="submit" class="btn-disconnect-small">Disconnect</button>
                      </form>
                    <% } else { %>
                      <form method="POST" action="/dashboard/settings/pos/webhook/create" style="display: inline;">
                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                        <input type="hidden" name="provider" value="webhook">
                        <button type="submit" class="btn-connect-small">Setup Webhook</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%
          // Check if any integration is active for showing test mode section
          const anyIntegrationActive = (typeof squareIntegration !== 'undefined' && squareIntegration && squareIntegration.isActive) ||
                                       (typeof shopifyIntegration !== 'undefined' && shopifyIntegration && shopifyIntegration.isActive) ||
                                       (typeof zapierIntegration !== 'undefined' && zapierIntegration && zapierIntegration.isActive) ||
                                       (typeof webhookIntegration !== 'undefined' && webhookIntegration && webhookIntegration.isActive) ||
                                       (typeof stripeIntegration !== 'undefined' && stripeIntegration && stripeIntegration.isActive) ||
                                       (typeof woocommerceIntegration !== 'undefined' && woocommerceIntegration && woocommerceIntegration.isActive) ||
                                       (typeof cloverIntegration !== 'undefined' && cloverIntegration && cloverIntegration.isActive);
        %>

        <% if (anyIntegrationActive) { %>
          <div class="form-section">
            <h3>Test Mode & Settings</h3>

            <%
              // Find the first active integration
              let activeIntegration = null;
              let provider = null;

              if (typeof squareIntegration !== 'undefined' && squareIntegration && squareIntegration.isActive) {
                activeIntegration = squareIntegration;
                provider = 'square';
              } else if (typeof shopifyIntegration !== 'undefined' && shopifyIntegration && shopifyIntegration.isActive) {
                activeIntegration = shopifyIntegration;
                provider = 'shopify';
              } else if (typeof zapierIntegration !== 'undefined' && zapierIntegration && zapierIntegration.isActive) {
                activeIntegration = zapierIntegration;
                provider = 'zapier';
              } else if (typeof webhookIntegration !== 'undefined' && webhookIntegration && webhookIntegration.isActive) {
                activeIntegration = webhookIntegration;
                provider = 'webhook';
              } else if (typeof stripeIntegration !== 'undefined' && stripeIntegration && stripeIntegration.isActive) {
                activeIntegration = stripeIntegration;
                provider = 'stripe_pos';
              } else if (typeof woocommerceIntegration !== 'undefined' && woocommerceIntegration && woocommerceIntegration.isActive) {
                activeIntegration = woocommerceIntegration;
                provider = 'woocommerce';
              } else if (typeof cloverIntegration !== 'undefined' && cloverIntegration && cloverIntegration.isActive) {
                activeIntegration = cloverIntegration;
                provider = 'clover';
              }
            %>

            <div class="warning-box">
              <strong>Test Mode:</strong>
              When enabled, all SMS messages will be sent to your test phone number instead of customers.
              This allows you to test the integration without messaging real customers.
            </div>

            <form method="POST" action="/dashboard/settings/pos/test-mode" id="testModeForm">
              <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
              <input type="hidden" name="provider" value="<%= provider %>">
              <div class="toggle-switch">
                <input type="checkbox" id="testMode" name="testMode" class="auto-submit-checkbox" <%= activeIntegration.testMode ? 'checked' : '' %>>
                <label for="testMode" style="margin: 0; font-weight: normal;">Test Mode <%= activeIntegration.testMode ? '(Active)' : '(Inactive)' %></label>
              </div>
            </form>

            <% if (activeIntegration.testMode) { %>
              <form method="POST" action="/dashboard/settings/pos/test-phone" style="margin-top: 15px;">
                <input type="hidden" name="_csrf" id="pos-csrf-token" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                <input type="hidden" name="provider" value="<%= provider %>">
                <div class="form-group">
                  <label for="testPhoneNumber">Test Phone Number</label>
                  <input type="tel" id="testPhoneNumber" name="testPhoneNumber" value="<%= activeIntegration.testPhoneNumber || '' %>" placeholder="(555) 123-4567">
                  <div class="help-text">SMS messages will be sent to this number while test mode is enabled.</div>
                </div>
                <div style="display: flex; gap: 10px; align-items: center; flex-wrap: wrap;">
                  <button type="submit" class="btn-save" style="width: auto; padding: 10px 20px;">Save Test Phone</button>
                  <button type="button" id="sendTestSmsBtn" class="btn-save" style="width: auto; padding: 10px 20px; background: #3182ce;" <%= !activeIntegration.testPhoneNumber ? 'disabled' : '' %>>
                    Send Test SMS
                  </button>
                  <span id="testSmsRemaining" style="font-size: 13px; color: #718096; margin-left: 5px;">Loading...</span>
                </div>
              </form>
              <div id="testSmsResult" style="margin-top: 10px; display: none;"></div>
            <% } %>

            <div style="margin-top: 25px; padding-top: 20px; border-top: 1px solid #e2e8f0;">
              <label style="font-size: 15px; margin-bottom: 10px;">SMS Consent Confirmation</label>
              <p style="color: #718096; font-size: 13px; margin-bottom: 12px;">
                US law (TCPA) requires businesses to have consent before sending marketing SMS. By checking this box, you confirm your customers have agreed to receive SMS from your business.
              </p>
              <form method="POST" action="/dashboard/settings/pos/consent" id="consentForm">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                <input type="hidden" name="provider" value="<%= provider %>">
                <div class="location-checkbox">
                  <input type="checkbox" id="consent" name="consent" class="auto-submit-checkbox" <%= activeIntegration.consentConfirmed ? 'checked' : '' %>>
                  <label for="consent" style="margin: 0; font-weight: normal;">
                    I confirm that I have SMS consent from customers whose phone numbers are on file.
                  </label>
                </div>
              </form>

              <% if (!activeIntegration.consentConfirmed) { %>
                <div class="warning-box" style="margin-top: 15px;">
                  <strong>Required:</strong> SMS messages will not be sent until you confirm customer consent above.
                </div>
              <% } %>
            </div>
          </div>

          <div class="form-section">
            <h3>How It Works</h3>
            <ul style="color: #718096; font-size: 14px; line-height: 1.8; padding-left: 20px;">
              <li><strong>Square:</strong> SMS is sent when a payment completes with a customer on file.</li>
              <li><strong>Shopify:</strong> SMS is sent when an order is created with a phone number.</li>
              <li><strong>Zapier/Webhook:</strong> SMS is sent when your Zap or custom integration sends transaction data.</li>
              <li><strong>Stripe:</strong> SMS is sent after Checkout or Terminal payments (configurable).</li>
              <li><strong>WooCommerce:</strong> SMS is sent when an order is completed with a phone number.</li>
              <li><strong>US Numbers Only:</strong> Only US phone numbers (+1) receive SMS. International numbers are automatically skipped.</li>
              <li><strong>30-Day Cooldown:</strong> Each customer receives a maximum of one SMS per 30 days to avoid over-messaging.</li>
              <li><strong>Counts Against Limit:</strong> POS-triggered SMS counts toward your monthly SMS allocation.</li>
            </ul>
          </div>
        <% } %>
      </div>

      <!-- POS Transactions Tab -->
      <div id="tab-transactions" class="tab-content">
        <div class="form-section">
          <h3>Recent POS Transactions</h3>
          <p style="color: #718096; margin-bottom: 20px;">
            View recent purchases from your connected POS systems and their SMS status.
          </p>

          <% if (typeof recentTransactions !== 'undefined' && recentTransactions && recentTransactions.length > 0) { %>
            <table class="transactions-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Customer</th>
                  <th>Phone</th>
                  <th>Amount</th>
                  <th>Location</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% recentTransactions.forEach(function(tx) { %>
                  <tr>
                    <td data-label="Date"><%= new Date(tx.createdAt).toLocaleDateString() %> <%= new Date(tx.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></td>
                    <td data-label="Customer"><%= tx.customerName || 'N/A' %></td>
                    <td data-label="Phone"><%= tx.getMaskedPhone ? tx.getMaskedPhone() : (tx.customerPhone ? tx.customerPhone.slice(0,6) + '****' : 'N/A') %></td>
                    <td data-label="Amount"><%= tx.purchaseAmount ? '$' + parseFloat(tx.purchaseAmount).toFixed(2) : 'N/A' %></td>
                    <td data-label="Location"><%= tx.locationName || 'N/A' %></td>
                    <td data-label="Status">
                      <%
                        let statusClass = 'skipped';
                        if (tx.smsStatus === 'sent') statusClass = 'sent';
                        else if (tx.smsStatus === 'pending') statusClass = 'pending';
                        else if (tx.smsStatus === 'failed') statusClass = 'failed';
                      %>
                      <span class="status-pill <%= statusClass %>">
                        <%= tx.getStatusLabel ? tx.getStatusLabel() : tx.smsStatus %>
                      </span>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <div class="empty-state">
              <p>No POS transactions yet.</p>
              <p style="font-size: 14px;">Connect a POS system and make a purchase to see transactions here.</p>
            </div>
          <% } %>
        </div>
