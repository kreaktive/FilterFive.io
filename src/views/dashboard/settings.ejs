  <script<%- typeof cspNonce !== 'undefined' ? ` nonce="${cspNonce}"` : '' %>>
    function submitSupportForm(e) {
      if (e) {
        e.preventDefault();
        e.stopPropagation();
      }

      var btn = document.getElementById('supportSubmitBtn');
      var successEl = document.getElementById('supportSuccess');
      var errorEl = document.getElementById('supportError');
      var subject = document.getElementById('supportSubject').value;
      var message = document.getElementById('supportMessage').value;

      // Validate
      if (!subject) {
        alert('Please select a topic.');
        return false;
      }
      if (!message || message.trim() === '') {
        alert('Please enter a message.');
        return false;
      }

      btn.disabled = true;
      btn.textContent = 'Sending...';
      successEl.style.display = 'none';
      errorEl.style.display = 'none';

      var csrfToken = document.getElementById('support-csrf-token')?.value || '';
      fetch('/dashboard/settings/support', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'x-csrf-token': csrfToken },
        body: JSON.stringify({ subject: subject, message: message })
      })
      .then(function(res) { return res.json(); })
      .then(function(data) {
        if (data.success) {
          successEl.style.display = 'block';
          successEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
          // Reset form fields but keep showing success
          document.getElementById('supportSubject').value = '';
          document.getElementById('supportMessage').value = '';
        } else {
          errorEl.textContent = data.error || 'Something went wrong. Please try again.';
          errorEl.style.display = 'block';
        }
        btn.disabled = false;
        btn.textContent = 'Send Message';
      })
      .catch(function(err) {
        errorEl.style.display = 'block';
        btn.disabled = false;
        btn.textContent = 'Send Message';
      });

      return false;
    }

    function updateRadioSelection(radio) {
      document.querySelectorAll('.radio-option').forEach(option => {
        option.classList.remove('selected');
      });
      if (radio.checked) {
        radio.closest('.radio-option').classList.add('selected');
      }
    }

    function switchTab(tabName, clickedBtn) {
      // Hide all tabs
      document.querySelectorAll('.tab-content').forEach(function(tab) {
        tab.classList.remove('active');
      });
      document.querySelectorAll('.tab-button').forEach(function(btn) {
        btn.classList.remove('active');
      });

      // Show selected tab
      var tabEl = document.getElementById('tab-' + tabName);
      if (tabEl) {
        tabEl.classList.add('active');
      }

      // Mark clicked button as active
      if (clickedBtn) {
        clickedBtn.classList.add('active');
      }

      // Update URL without reload
      var url = new URL(window.location);
      url.searchParams.set('tab', tabName);
      window.history.replaceState({}, '', url);
    }

    // Initialize tabs on load
    document.addEventListener('DOMContentLoaded', function() {
      // Add click handler for support form submit button
      var supportBtn = document.getElementById('supportSubmitBtn');
      if (supportBtn) {
        supportBtn.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          submitSupportForm(e);
        });
      }

      // Add click handlers to tab buttons
      var tabButtons = document.querySelectorAll('.tab-button[data-tab]');
      tabButtons.forEach(function(btn) {
        btn.addEventListener('click', function() {
          var tabName = this.getAttribute('data-tab');
          switchTab(tabName, this);
        });
      });

      // Check URL for tab parameter on load
      var urlParams = new URLSearchParams(window.location.search);
      var tab = urlParams.get('tab');
      if (tab && ['general', 'pos', 'transactions', 'support'].indexOf(tab) !== -1) {
        // Find the right tab button and activate it
        tabButtons.forEach(function(btn) {
          if (btn.getAttribute('data-tab') === tab) {
            switchTab(tab, btn);
          }
        });
      }

      // Add loading state to main settings form
      var settingsForm = document.getElementById('generalSettingsForm');
      var saveBtn = document.getElementById('saveSettingsBtn');
      if (settingsForm && saveBtn) {
        settingsForm.addEventListener('submit', function() {
          saveBtn.classList.add('saving');
          saveBtn.disabled = true;
          // Re-enable after 10s timeout as fallback
          setTimeout(function() {
            saveBtn.classList.remove('saving');
            saveBtn.disabled = false;
          }, 10000);
        });
      }

      // Add change handlers for radio buttons (SMS tone selection)
      var toneRadios = document.querySelectorAll('.tone-radio');
      toneRadios.forEach(function(radio) {
        radio.addEventListener('change', function() {
          updateRadioSelection(this);
          // Show/hide custom message editor
          var customEditor = document.getElementById('customMessageEditor');
          if (customEditor) {
            customEditor.style.display = this.value === 'custom' ? 'block' : 'none';
          }
        });
      });

      // Initialize custom editor visibility on page load based on current selection
      var selectedTone = document.querySelector('.tone-radio:checked');
      if (selectedTone) {
        var customEditor = document.getElementById('customMessageEditor');
        if (customEditor) {
          customEditor.style.display = selectedTone.value === 'custom' ? 'block' : 'none';
        }
      }

      // Custom message preview functionality
      var customMessageTextarea = document.getElementById('customSmsMessage');
      var previewElement = document.getElementById('customMessagePreview');
      var charCountElement = document.getElementById('charCount');
      var businessName = '<%= user.businessName %>';
      var reviewLink = '<%= user.reviewUrl || "https://g.page/your-business/review" %>';

      function updateCustomMessagePreview() {
        if (!customMessageTextarea || !previewElement) return;

        var message = customMessageTextarea.value;
        if (!message.trim()) {
          previewElement.innerHTML = '<em style="color: #a0aec0;">Enter a message above to see preview</em>';
          if (charCountElement) charCountElement.textContent = '0';
          return;
        }

        // Replace tags with sample values
        var preview = message
          .replace(/\{\{CustomerName\}\}/gi, 'John')
          .replace(/\{\{BusinessName\}\}/gi, businessName)
          .replace(/\{\{ReviewLink\}\}/gi, reviewLink);

        previewElement.textContent = preview;

        // Update character count
        if (charCountElement) {
          var charCount = preview.length;
          charCountElement.textContent = charCount;
          charCountElement.style.color = charCount > 160 ? '#dc2626' : '#718096';
        }
      }

      if (customMessageTextarea) {
        customMessageTextarea.addEventListener('input', updateCustomMessagePreview);
        // Initialize preview on load
        updateCustomMessagePreview();
      }

      // Add change handlers for auto-submit checkboxes (test mode, consent)
      var autoSubmitCheckboxes = document.querySelectorAll('.auto-submit-checkbox');
      autoSubmitCheckboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', function() {
          this.form.submit();
        });
      });

      // Shopify connect button handler - direct navigation
      var shopifyBtn = document.getElementById('shopifyConnectBtn');
      if (shopifyBtn) {
        shopifyBtn.addEventListener('click', function(e) {
          var shopInput = document.getElementById('shopifyShopInput');
          var shopValue = shopInput ? shopInput.value.trim() : '';

          if (!shopValue) {
            alert('Please enter your Shopify store URL');
            return;
          }

          // Navigate directly to the OAuth endpoint
          var url = '/api/auth/shopify/connect?shop=' + encodeURIComponent(shopValue);
          console.log('Navigating to:', url);
          window.location.href = url;
        });
      }

      // Phone number auto-formatting for test phone input
      var testPhoneInput = document.getElementById('testPhoneNumber');
      if (testPhoneInput) {
        testPhoneInput.addEventListener('input', function(e) {
          // Get only digits from input
          var digits = this.value.replace(/\D/g, '');

          // Limit to 10 digits (US phone number)
          digits = digits.substring(0, 10);

          // Format as (XXX) XXX-XXXX
          var formatted = '';
          if (digits.length > 0) {
            formatted = '(' + digits.substring(0, 3);
          }
          if (digits.length >= 3) {
            formatted += ') ' + digits.substring(3, 6);
          }
          if (digits.length >= 6) {
            formatted += '-' + digits.substring(6, 10);
          }

          // Update the input value
          this.value = formatted;
        });

        // Format existing value on page load
        if (testPhoneInput.value) {
          var digits = testPhoneInput.value.replace(/\D/g, '');
          if (digits.length === 10) {
            testPhoneInput.value = '(' + digits.substring(0, 3) + ') ' + digits.substring(3, 6) + '-' + digits.substring(6, 10);
          } else if (digits.length === 11 && digits.charAt(0) === '1') {
            // Handle +1 prefix
            digits = digits.substring(1);
            testPhoneInput.value = '(' + digits.substring(0, 3) + ') ' + digits.substring(3, 6) + '-' + digits.substring(6, 10);
          }
        }

        // Enable/disable Test SMS button based on phone input
        testPhoneInput.addEventListener('input', function() {
          var sendTestBtn = document.getElementById('sendTestSmsBtn');
          if (sendTestBtn) {
            var digits = this.value.replace(/\D/g, '');
            sendTestBtn.disabled = digits.length < 10;
          }
        });
      }

      // Function to fetch and update test SMS remaining count
      function updateTestSmsRemaining() {
        var remainingEl = document.getElementById('testSmsRemaining');
        var sendBtn = document.getElementById('sendTestSmsBtn');
        if (!remainingEl) return;

        fetch('/dashboard/settings/pos/test-sms-remaining')
          .then(function(response) { return response.json(); })
          .then(function(data) {
            if (data.success) {
              var remaining = data.remaining;
              var limit = data.limit;
              remainingEl.textContent = remaining + '/' + limit + ' test SMS left';
              remainingEl.style.color = remaining === 0 ? '#dc2626' : '#718096';
              // Disable button if no SMS remaining
              if (sendBtn && remaining === 0) {
                sendBtn.disabled = true;
                sendBtn.title = 'Daily test SMS limit reached (resets at midnight)';
              }
            } else {
              remainingEl.textContent = '';
            }
          })
          .catch(function() {
            remainingEl.textContent = '';
          });
      }

      // Fetch test SMS remaining on page load
      updateTestSmsRemaining();

      // Send Test SMS button handler
      var sendTestSmsBtn = document.getElementById('sendTestSmsBtn');
      if (sendTestSmsBtn) {
        sendTestSmsBtn.addEventListener('click', function() {
          var btn = this;
          var resultDiv = document.getElementById('testSmsResult');
          var phoneInput = document.getElementById('testPhoneNumber');
          var phone = phoneInput ? phoneInput.value.replace(/\D/g, '') : '';

          if (phone.length < 10) {
            resultDiv.innerHTML = '<span style="color: #dc2626;">Please enter a valid phone number first.</span>';
            resultDiv.style.display = 'block';
            return;
          }

          // Disable button and show loading
          btn.disabled = true;
          btn.textContent = 'Sending...';
          resultDiv.style.display = 'none';

          // Send test SMS via API
          var csrfToken = document.getElementById('pos-csrf-token')?.value || document.getElementById('support-csrf-token')?.value || '';
          fetch('/dashboard/settings/pos/send-test-sms', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'x-csrf-token': csrfToken
            },
            body: JSON.stringify({ phone: phone })
          })
          .then(function(response) { return response.json(); })
          .then(function(data) {
            if (data.success) {
              resultDiv.innerHTML = '<span style="color: #10b981;">Test SMS sent successfully! Check your phone.</span>';
              // Update remaining count after successful send
              updateTestSmsRemaining();
            } else {
              resultDiv.innerHTML = '<span style="color: #dc2626;">Failed to send: ' + (data.error || 'Unknown error') + '</span>';
            }
            resultDiv.style.display = 'block';
          })
          .catch(function(err) {
            resultDiv.innerHTML = '<span style="color: #dc2626;">Error: ' + err.message + '</span>';
            resultDiv.style.display = 'block';
          })
          .finally(function() {
            btn.disabled = false;
            btn.textContent = 'Send Test SMS';
          });
        });
      }

      // Review URL real-time validation
      var reviewUrlInput = document.getElementById('reviewUrl');
      var reviewUrlFeedback = document.getElementById('reviewUrlFeedback');

      if (reviewUrlInput && reviewUrlFeedback) {
        var checkIcon = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M9 12l2 2 4-4"/></svg>';
        var errorIcon = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M15 9l-6 6M9 9l6 6"/></svg>';
        var infoIcon = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 8v4M12 16h.01"/></svg>';

        function detectPlatform(url) {
          url = url.toLowerCase();
          if (url.includes('g.page') || url.includes('google.com/maps') || url.includes('search.google.com')) return { name: 'Google', icon: 'ðŸ”µ' };
          if (url.includes('yelp.com')) return { name: 'Yelp', icon: 'ðŸ”´' };
          if (url.includes('facebook.com') || url.includes('fb.com')) return { name: 'Facebook', icon: 'ðŸ”·' };
          if (url.includes('tripadvisor.com')) return { name: 'TripAdvisor', icon: 'ðŸŸ¢' };
          if (url.includes('trustpilot.com')) return { name: 'Trustpilot', icon: 'â­' };
          return null;
        }

        function validateReviewUrl(url) {
          if (!url || url.trim() === '') {
            return { valid: false, message: 'Enter your review platform URL' };
          }

          // Basic URL validation
          try {
            new URL(url);
          } catch (e) {
            return { valid: false, message: 'Please enter a valid URL starting with https://' };
          }

          if (!url.startsWith('https://') && !url.startsWith('http://')) {
            return { valid: false, message: 'URL must start with https://' };
          }

          var platform = detectPlatform(url);
          if (platform) {
            return { valid: true, message: platform.icon + ' ' + platform.name + ' review link detected', platform: platform };
          }

          return { valid: true, message: 'Custom review platform URL' };
        }

        function updateUrlFeedback() {
          var url = reviewUrlInput.value.trim();
          var result = validateReviewUrl(url);

          reviewUrlFeedback.classList.add('show');
          reviewUrlFeedback.querySelector('.feedback-text').textContent = result.message;

          if (url === '') {
            reviewUrlInput.classList.remove('input-valid', 'input-invalid');
            reviewUrlFeedback.classList.remove('valid', 'invalid');
            reviewUrlFeedback.querySelector('.feedback-icon').innerHTML = infoIcon;
          } else if (result.valid) {
            reviewUrlInput.classList.add('input-valid');
            reviewUrlInput.classList.remove('input-invalid');
            reviewUrlFeedback.classList.add('valid');
            reviewUrlFeedback.classList.remove('invalid');
            reviewUrlFeedback.querySelector('.feedback-icon').innerHTML = checkIcon;
          } else {
            reviewUrlInput.classList.add('input-invalid');
            reviewUrlInput.classList.remove('input-valid');
            reviewUrlFeedback.classList.add('invalid');
            reviewUrlFeedback.classList.remove('valid');
            reviewUrlFeedback.querySelector('.feedback-icon').innerHTML = errorIcon;
          }
        }

        reviewUrlInput.addEventListener('input', updateUrlFeedback);
        reviewUrlInput.addEventListener('blur', updateUrlFeedback);

        // Initialize on page load if value exists
        if (reviewUrlInput.value) {
          updateUrlFeedback();
        }
      }

      // Business Name validation
      var businessNameInput = document.getElementById('businessName');
      var businessNameFeedback = document.getElementById('businessNameFeedback');

      if (businessNameInput && businessNameFeedback) {
        function validateBusinessName(value) {
          if (!value || value.trim() === '') {
            return { valid: false, message: 'Please enter your business name' };
          }
          if (value.trim().length < 2) {
            return { valid: false, message: 'Business name is too short' };
          }
          if (value.trim().length > 100) {
            return { valid: false, message: 'Business name is too long (max 100 chars)' };
          }
          return { valid: true, message: 'Looks good!' };
        }

        function setFeedbackIcon(feedbackEl, type) {
          var iconEl = feedbackEl.querySelector('.feedback-icon');
          // Clear existing paths
          while (iconEl.lastChild) {
            iconEl.removeChild(iconEl.lastChild);
          }
          if (type === 'valid') {
            var circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
            circle.setAttribute('cx', '12');
            circle.setAttribute('cy', '12');
            circle.setAttribute('r', '10');
            var path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            path.setAttribute('d', 'M9 12l2 2 4-4');
            iconEl.appendChild(circle);
            iconEl.appendChild(path);
          } else {
            var circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
            circle.setAttribute('cx', '12');
            circle.setAttribute('cy', '12');
            circle.setAttribute('r', '10');
            var path1 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            path1.setAttribute('d', 'M15 9l-6 6');
            var path2 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            path2.setAttribute('d', 'M9 9l6 6');
            iconEl.appendChild(circle);
            iconEl.appendChild(path1);
            iconEl.appendChild(path2);
          }
        }

        function updateBusinessNameFeedback() {
          var value = businessNameInput.value;
          var result = validateBusinessName(value);

          if (value === '') {
            businessNameInput.classList.remove('input-valid', 'input-invalid');
            businessNameFeedback.classList.remove('show', 'valid', 'invalid');
            return;
          }

          businessNameFeedback.classList.add('show');
          businessNameFeedback.querySelector('.feedback-text').textContent = result.message;

          if (result.valid) {
            businessNameInput.classList.add('input-valid');
            businessNameInput.classList.remove('input-invalid');
            businessNameFeedback.classList.add('valid');
            businessNameFeedback.classList.remove('invalid');
            setFeedbackIcon(businessNameFeedback, 'valid');
          } else {
            businessNameInput.classList.add('input-invalid');
            businessNameInput.classList.remove('input-valid');
            businessNameFeedback.classList.add('invalid');
            businessNameFeedback.classList.remove('valid');
            setFeedbackIcon(businessNameFeedback, 'invalid');
          }
        }

        businessNameInput.addEventListener('blur', updateBusinessNameFeedback);
        businessNameInput.addEventListener('input', function() {
          if (this.classList.contains('input-invalid')) {
            updateBusinessNameFeedback();
          }
        });

        // Initialize on page load if value exists
        if (businessNameInput.value) {
          updateBusinessNameFeedback();
        }
      }
    });
  </script>

