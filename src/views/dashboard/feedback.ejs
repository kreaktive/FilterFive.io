        <div class="filter-group">
          <span class="filter-label">Has Feedback:</span>
          <select class="filter-select" id="hasFeedbackFilter" onchange="applyFilters()">
            <option value="all" <%= filters.hasFeedback === 'all' ? 'selected' : '' %>>All</option>
            <option value="true" <%= filters.hasFeedback === 'true' ? 'selected' : '' %>>Yes</option>
            <option value="false" <%= filters.hasFeedback === 'false' ? 'selected' : '' %>>No</option>
