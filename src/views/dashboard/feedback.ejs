  <!-- Respond Modal -->
  <div id="respondModal" class="modal-overlay">
    <div class="modal">
      <div class="modal-header">
        <h3 class="modal-title">üì± Respond via SMS</h3>
        <button class="modal-close" onclick="closeModal('respondModal')">√ó</button>
      </div>
      <div class="modal-body">
        <div class="info-box">
          <div class="info-box-title" id="respondCustomerName">Customer</div>
          <div class="info-box-content">
            <strong>Phone:</strong> <span id="respondCustomerPhone"></span><br>
            <strong>Original Feedback:</strong><br>
            <em id="respondOriginalFeedback"></em>
          </div>
        </div>

        <div class="form-group">
          <label class="form-label">Your Message</label>
          <textarea class="form-textarea" id="respondMessage" placeholder="Type your response..." maxlength="320" oninput="updateCharCount()"></textarea>
