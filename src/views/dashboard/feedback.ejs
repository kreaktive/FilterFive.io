      <div class="filters-row">
        <div class="filter-group" style="flex: 1;">
          <span class="filter-label">Search:</span>
          <input type="text" class="filter-input" id="searchFilter" placeholder="Search feedback text..." value="<%= filters.search %>" onkeyup="handleSearchKeyup(event)">
        </div>
        <button class="filter-btn secondary" onclick="exportFeedback()">üìä Export CSV</button>
      </div>
    </div>

    <!-- Bulk Actions Bar -->
    <div id="bulkActionsBar" class="bulk-actions">
      <span class="bulk-count"><span id="selectedCount">0</span> selected</span>
      <div class="bulk-actions-buttons">
        <button class="bulk-btn" onclick="bulkUpdateStatus('viewed')">Mark as Viewed</button>
        <button class="bulk-btn" onclick="bulkUpdateStatus('resolved')">Mark as Resolved</button>
        <button class="bulk-btn" onclick="clearSelection()">Clear Selection</button>
      </div>
    </div>

    <!-- Table Section -->
    <div class="table-section">
      <div class="table-container">
        <% if (feedbackList.length > 0) { %>
          <table class="feedback-table" id="feedbackTable">
            <thead>
              <tr>
                <th style="width: 50px;">
                  <input type="checkbox" id="selectAll" onchange="toggleSelectAll()" title="Select all">
                </th>
                <th class="sortable" data-column="date" onclick="sortTable('date')">Date/Time</th>
                <th class="sortable" data-column="customer" onclick="sortTable('customer')">Customer</th>
                <th class="sortable" data-column="phone" onclick="sortTable('phone')">Phone</th>
                <th class="sortable" data-column="rating" onclick="sortTable('rating')">Rating</th>
                <th style="min-width: 250px;">Feedback</th>
                <th class="sortable" data-column="status" onclick="sortTable('status')">Status</th>
                <th style="width: 120px;">Actions</th>
              </tr>
            </thead>
            <tbody id="feedbackTableBody">
              <% feedbackList.forEach(request => { %>
                <% const review = request.review; %>
                <% const rating = review ? review.rating : 0; %>
                <tr class="rating-<%= rating %>" data-review-id="<%= review ? review.id : '' %>">
                  <td>
                    <% if (review) { %>
                      <input type="checkbox" class="row-checkbox" data-review-id="<%= review.id %>" onchange="updateBulkActions()">
                    <% } %>
                  </td>
                  <td data-sort="<%= new Date(request.createdAt).getTime() %>">
                    <%= new Date(request.createdAt).toLocaleDateString() %><br>
                    <small style="color: #718096;"><%= new Date(request.createdAt).toLocaleTimeString() %></small>
                  </td>
                  <td data-sort="<%= request.customerName || 'zzz' %>"><%= request.customerName || 'Anonymous' %></td>
                  <td data-sort="<%= request.customerPhone || '' %>"><%= request.customerPhone || '-' %></td>
                  <td data-sort="<%= rating %>">
                    <% if (review) { %>
                      <span class="stars"><%= '‚òÖ'.repeat(review.rating) %></span>
                    <% } else { %>
                      -
                    <% } %>
                  </td>
                  <td>
                    <% if (review && review.feedbackText) { %>
                      <div class="feedback-text truncated clickable" onclick="toggleFeedback(this, <%= review.id %>)" data-full="<%= review.feedbackText.replace(/"/g, '&quot;') %>">
                        <%= review.feedbackText.length > 100 ? review.feedbackText.substring(0, 100) + '...' : review.feedbackText %>
                      </div>
                    <% } else { %>
                      <div class="feedback-text no-feedback">No feedback</div>
                    <% } %>
                  </td>
                  <td data-sort="<%= review ? review.feedbackStatus : 'zzz' %>">
                    <% if (review) { %>
                      <span class="status-badge status-<%= review.feedbackStatus %>">
                        <%= review.feedbackStatus %>
                      </span>
                    <% } else { %>
                      -
                    <% } %>
                  </td>
                  <td>
                    <% if (review) { %>
                      <div class="actions-dropdown">
                        <button class="actions-btn" onclick="toggleActionsMenu(event, this)">Actions ‚ñº</button>
                        <div class="actions-menu">
                          <div class="actions-menu-item" onclick="openRespondModal(<%= review.id %>, '<%= request.customerName || 'Customer' %>', '<%= request.customerPhone %>', `<%= (review.feedbackText || '').replace(/`/g, '\\`').replace(/\n/g, ' ') %>`)">
                            üí¨ Respond via SMS
                          </div>
                          <div class="actions-menu-item" onclick="openNotesModal(<%= review.id %>, `<%= (review.internalNotes || '').replace(/`/g, '\\`') %>`)">
                            üìù Add Note
                          </div>
                          <div class="actions-menu-item" onclick="updateSingleStatus(<%= review.id %>, 'resolved')">
                            ‚úÖ Mark Resolved
                          </div>
                        </div>
                      </div>
                    <% } else { %>
                      -
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-icon">üí¨</div>
            <div class="empty-title">No Feedback Found</div>
            <div class="empty-message">Try adjusting your filters to see more results</div>
          </div>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (feedbackList.length > 0) { %>
        <div class="pagination-container">
          <div class="pagination-info">
            Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %>-<%= Math.min(pagination.currentPage * pagination.limit, pagination.totalItems) %> of <%= pagination.totalItems %> items
          </div>
          <div class="pagination-controls">
            <span class="filter-label">Per page:</span>
            <select class="per-page-select" id="limitSelect" onchange="changeLimit()">
              <option value="10" <%= pagination.limit === 10 ? 'selected' : '' %>>10</option>
              <option value="25" <%= pagination.limit === 25 ? 'selected' : '' %>>25</option>
              <option value="50" <%= pagination.limit === 50 ? 'selected' : '' %>>50</option>
              <option value="100" <%= pagination.limit === 100 ? 'selected' : '' %>>100</option>
            </select>
            <button class="pagination-btn" onclick="changePage(<%= pagination.currentPage - 1 %>)" <%= pagination.hasPrev ? '' : 'disabled' %>>‚Üê Prev</button>
            <span style="color: #718096; font-weight: 600;">Page <%= pagination.currentPage %> of <%= pagination.totalPages %></span>
            <button class="pagination-btn" onclick="changePage(<%= pagination.currentPage + 1 %>)" <%= pagination.hasNext ? '' : 'disabled' %>>Next ‚Üí</button>
          </div>
        </div>
      <% } %>
    </div>

    <!-- Word Cloud Section -->
    <div class="word-cloud-section">
      <div class="word-cloud-header" onclick="toggleWordCloud()">
        <h3>
          <span class="collapse-icon" id="wordCloudIcon">‚ñº</span>
          Word Cloud Analysis
        </h3>
        <span class="filter-label" style="cursor: pointer;">Click to expand/collapse</span>
      </div>
      <div class="word-cloud-content" id="wordCloudContent">
        <div class="word-cloud-loading" id="wordCloudLoading">Loading word cloud...</div>
        <canvas id="wordCloudCanvas" style="display: none;"></canvas>
      </div>
    </div>
