<%- include('../partials/dashboard-head', { title: 'Analytics Dashboard - MoreStars' }) %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js" integrity="sha384-FcQlsUOd0TJjROrBxhJdUhXTUgNJQxTMcxZe6nHbaEfFL1zjQ+bq/uRoBQxb0KMo" crossorigin="anonymous"></script>
  <script src="/js/chart-utils.min.js?v=<%= typeof assetVersion !== 'undefined' ? assetVersion : '1.0.0' %>"></script>
  <style>
    /* Page-specific container override */
    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: var(--space-8) var(--space-5);
      padding-bottom: var(--space-10);
    }

    .page-header {
      margin-bottom: var(--space-8);
    }

    .page-header h2 {
      font-size: var(--text-2xl);
      color: var(--brand-dark);
      margin-bottom: var(--space-1);
    }

    .page-header p {
      color: var(--text-secondary);
      font-size: var(--text-base);
    }

    /* Filters Bar */
    .filters-bar {
      background: var(--bg-white);
      border-radius: var(--radius-lg);
      padding: var(--space-5);
      box-shadow: var(--shadow-sm);
      margin-bottom: var(--space-8);
      display: flex;
      gap: var(--space-4);
      flex-wrap: wrap;
      align-items: center;
    }

    .filter-group {
      display: flex;
      gap: var(--space-2);
      align-items: center;
    }

    .filter-label {
      font-size: var(--text-sm);
      font-weight: 600;
      color: var(--text-secondary);
    }

    .filter-btn {
      padding: var(--space-2) var(--space-4);
      border: 2px solid var(--border-light);
      background: var(--bg-white);
      border-radius: var(--radius-md);
      font-size: var(--text-sm);
      font-weight: 600;
      color: var(--text-secondary);
      cursor: pointer;
      transition: all var(--transition-base);
    }

    .filter-btn:hover {
      border-color: var(--brand-gold);
      color: var(--brand-dark);
    }

    .filter-btn.active {
      background: var(--brand-gold);
      color: var(--brand-dark);
      border-color: var(--brand-gold);
    }

    .filter-select {
      padding: var(--space-2) var(--space-4);
      border: 2px solid var(--border-light);
      border-radius: var(--radius-md);
      font-size: var(--text-sm);
      font-weight: 600;
      color: var(--text-secondary);
      background: var(--bg-white);
      cursor: pointer;
    }

    /* ROI Hero Card */
    .roi-hero {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: var(--radius-xl);
      padding: var(--space-10);
      box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
      margin-bottom: var(--space-8);
      color: white;
      text-align: center;
    }

    .roi-hero h3 {
      font-size: var(--text-lg);
      font-weight: 600;
      opacity: 0.95;
      margin-bottom: var(--space-4);
    }

    .roi-value {
      font-size: 64px;
      font-weight: 800;
      margin-bottom: var(--space-5);
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      min-height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .roi-details {
      display: flex;
      justify-content: center;
      gap: var(--space-10);
      flex-wrap: wrap;
    }

    .roi-detail {
      text-align: center;
    }

    .roi-detail-label {
      font-size: var(--text-xs);
      opacity: 0.85;
      margin-bottom: var(--space-1);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .roi-detail-value {
      font-size: var(--text-xl);
      font-weight: 700;
    }

    /* KPI Grid */
    .kpi-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--space-5);
      margin-bottom: var(--space-10);
    }

    .kpi-card {
      background: var(--bg-white);
      border-radius: var(--radius-lg);
      padding: var(--space-6);
      box-shadow: var(--shadow-sm);
      transition: transform var(--transition-base), box-shadow var(--transition-base);
      position: relative;
      overflow: hidden;
      max-height: 280px;
    }

    .kpi-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    .kpi-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: var(--space-4);
    }

    .kpi-label {
      font-size: var(--text-sm);
      color: var(--text-muted);
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      display: flex;
      align-items: center;
      gap: var(--space-2);
    }

    /* Tooltip Styles */
    .info-tooltip {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 16px;
      height: 16px;
      background: var(--border-light);
      border-radius: 50%;
      font-size: 11px;
      color: var(--text-muted);
      cursor: help;
      font-weight: 700;
      position: relative;
      font-style: normal;
      line-height: 1;
    }

    .info-tooltip:hover {
      background: var(--brand-gold);
      color: var(--brand-dark);
    }

    .info-tooltip::after {
      content: attr(data-tooltip);
      position: absolute;
      bottom: calc(100% + 8px);
      left: 50%;
      transform: translateX(-50%);
      background: var(--brand-dark);
      color: white;
      padding: var(--space-2) var(--space-3);
      border-radius: var(--radius-md);
      font-size: var(--text-xs);
      font-weight: 400;
      text-transform: none;
      letter-spacing: 0;
      white-space: normal;
      width: 220px;
      line-height: 1.5;
      opacity: 0;
      visibility: hidden;
      transition: opacity var(--transition-base), visibility var(--transition-base);
      z-index: 100;
      box-shadow: var(--shadow-md);
      text-align: left;
    }

    .info-tooltip::before {
      content: '';
      position: absolute;
      bottom: calc(100% + 2px);
      left: 50%;
      transform: translateX(-50%);
      border: 6px solid transparent;
      border-top-color: var(--brand-dark);
      opacity: 0;
      visibility: hidden;
      transition: opacity var(--transition-base), visibility var(--transition-base);
    }

    .info-tooltip:hover::after,
    .info-tooltip:hover::before {
      opacity: 1;
      visibility: visible;
    }

    /* ROI Tooltip */
    .roi-tooltip {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 20px;
      height: 20px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      font-size: var(--text-xs);
      color: white;
      cursor: help;
      font-weight: 700;
      position: relative;
      font-style: normal;
      margin-left: var(--space-2);
    }

    .roi-tooltip:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .roi-tooltip::after {
      content: attr(data-tooltip);
      position: absolute;
      bottom: calc(100% + 8px);
      left: 50%;
      transform: translateX(-50%);
      background: var(--bg-white);
      color: var(--brand-dark);
      padding: var(--space-3) var(--space-4);
      border-radius: var(--radius-md);
      font-size: var(--text-xs);
      font-weight: 400;
      white-space: normal;
      width: 260px;
      line-height: 1.5;
      opacity: 0;
      visibility: hidden;
      transition: opacity var(--transition-base), visibility var(--transition-base);
      z-index: 100;
      box-shadow: var(--shadow-md);
      text-align: left;
    }

    .roi-tooltip::before {
      content: '';
      position: absolute;
      bottom: calc(100% + 2px);
      left: 50%;
      transform: translateX(-50%);
      border: 6px solid transparent;
      border-top-color: var(--bg-white);
      opacity: 0;
      visibility: hidden;
      transition: opacity var(--transition-base), visibility var(--transition-base);
    }

    .roi-tooltip:hover::after,
    .roi-tooltip:hover::before {
      opacity: 1;
      visibility: visible;
    }

    .kpi-trend {
      display: flex;
      align-items: center;
      gap: var(--space-1);
      font-size: var(--text-xs);
      font-weight: 700;
      padding: var(--space-1) var(--space-2);
      border-radius: var(--radius-lg);
    }

    .kpi-trend.positive {
      background: #d1fae5;
      color: #065f46;
    }

    .kpi-trend.negative {
      background: #fee2e2;
      color: #991b1b;
    }

    .kpi-trend.neutral {
      background: var(--bg-light);
      color: var(--text-secondary);
    }

    .kpi-value {
      font-size: 42px;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: var(--space-2);
      min-height: 60px;
      display: flex;
      align-items: center;
    }

    .kpi-subtext {
      font-size: var(--text-sm);
      color: var(--text-muted);
      margin-bottom: var(--space-4);
    }

    .kpi-chart {
      height: 60px !important;
      max-height: 60px !important;
      margin-top: var(--space-2);
      width: 100% !important;
    }

    /* Quick Actions */
    .quick-actions {
      background: var(--bg-white);
      border-radius: var(--radius-lg);
      padding: var(--space-6);
      box-shadow: var(--shadow-sm);
      margin-bottom: var(--space-8);
    }

    .quick-actions h3 {
      font-size: var(--text-lg);
      color: var(--text-primary);
      margin-bottom: var(--space-4);
    }

    .actions-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-4);
    }

    .action-btn {
      padding: var(--space-4) var(--space-5);
      border: 2px solid var(--border-light);
      background: var(--bg-white);
      border-radius: var(--radius-md);
      font-size: var(--text-base);
      font-weight: 600;
      color: var(--text-secondary);
      cursor: pointer;
      transition: all var(--transition-base);
      text-align: center;
      text-decoration: none;
      display: block;
    }

    .action-btn:hover {
      background: var(--bg-light);
      border-color: var(--brand-gold);
      color: var(--brand-dark);
      transform: translateY(-1px);
    }

    /* Section Cards */
    .section {
      background: var(--bg-white);
      border-radius: var(--radius-lg);
      padding: var(--space-8);
      box-shadow: var(--shadow-sm);
      margin-bottom: var(--space-8);
    }

    .section h3 {
      font-size: var(--text-xl);
      color: var(--text-primary);
      margin-bottom: var(--space-5);
    }

    /* Loading State */
    .loading {
      text-align: center;
      padding: var(--space-10);
      color: var(--text-muted);
    }

    .loading-spinner {
      width: 40px;
      height: 40px;
      border: 4px solid var(--border-light);
      border-top-color: var(--brand-gold);
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      flex-shrink: 0;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .loading {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 60px;
      color: var(--text-muted);
      font-size: var(--text-sm);
    }

    /* Timing Heatmap */
    .heatmap-section {
      background: var(--bg-white);
      border-radius: var(--radius-lg);
      padding: var(--space-6);
      box-shadow: var(--shadow-sm);
      margin-bottom: var(--space-8);
    }

    .heatmap-section h3 {
      font-size: var(--text-lg);
      color: var(--text-primary);
      margin-bottom: var(--space-2);
      font-weight: 600;
    }

    .heatmap-description {
      color: var(--text-muted);
      font-size: var(--text-sm);
      margin-bottom: var(--space-5);
    }

    .heatmap-grid {
      display: grid;
      grid-template-columns: 60px repeat(7, 1fr);
      gap: 2px;
      margin-top: var(--space-5);
      overflow-x: auto;
    }

    .heatmap-header {
      font-size: var(--text-xs);
      font-weight: 600;
      color: var(--text-secondary);
      text-align: center;
      padding: var(--space-2) var(--space-1);
    }

    .heatmap-hour-label {
      font-size: 11px;
      color: var(--text-muted);
      padding: var(--space-2) var(--space-1);
      text-align: right;
      display: flex;
      align-items: center;
      justify-content: flex-end;
    }

    .heatmap-cell {
      aspect-ratio: 1;
      border-radius: var(--radius-sm);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
      font-weight: 600;
      cursor: help;
      transition: transform var(--transition-base), box-shadow var(--transition-base);
      position: relative;
    }

    .heatmap-cell:hover {
      transform: scale(1.1);
      box-shadow: var(--shadow-md);
      z-index: 10;
    }

    .heatmap-cell.empty {
      background: var(--bg-light);
      color: var(--border-light);
    }

    .heatmap-cell.very-low {
      background: #fed7d7;
      color: #742a2a;
    }

    .heatmap-cell.low {
      background: #feebc8;
      color: #7c2d12;
    }

    .heatmap-cell.medium {
      background: #fef3c7;
      color: #78350f;
    }

    .heatmap-cell.good {
      background: #d9f99d;
      color: #365314;
    }

    .heatmap-cell.excellent {
      background: #86efac;
      color: #14532d;
    }

    .heatmap-legend {
      display: flex;
      align-items: center;
      gap: var(--space-4);
      margin-top: var(--space-5);
      font-size: var(--text-xs);
      color: var(--text-muted);
      flex-wrap: wrap;
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: var(--space-2);
    }

    .legend-color {
      width: 20px;
      height: 20px;
      border-radius: var(--radius-sm);
    }

    .heatmap-loading {
      text-align: center;
      padding: var(--space-10);
      color: var(--text-muted);
      font-size: var(--text-sm);
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
      .filters-bar {
        flex-direction: column;
        align-items: stretch;
      }

      .filter-group {
        flex-direction: column;
        align-items: stretch;
      }

      .roi-hero {
        padding: var(--space-8) var(--space-5);
      }

      .roi-value {
        font-size: 48px;
      }

      .roi-details {
        gap: var(--space-5);
      }

      .kpi-grid {
        grid-template-columns: 1fr;
      }

      .actions-grid {
        grid-template-columns: 1fr;
      }

      .heatmap-grid {
        font-size: 9px;
      }

      .heatmap-cell {
        font-size: 9px;
      }

      .heatmap-hour-label {
        font-size: 10px;
      }

      .heatmap-legend {
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/dashboard-header', { activePage: 'analytics' }) %>

  <main id="main-content" class="container">
    <div class="page-header">
      <h2>Analytics Dashboard</h2>
      <p>Track your ROI and performance metrics</p>
    </div>

    <!-- Filters Bar -->
    <div class="filters-bar">
      <div class="filter-group">
        <span class="filter-label">Date Range:</span>
        <button class="filter-btn" data-range="7">Last 7 Days</button>
        <button class="filter-btn active" data-range="30">Last 30 Days</button>
        <button class="filter-btn" data-range="90">Last 90 Days</button>
      </div>

      <% if (locations && locations.length > 0) { %>
      <div class="filter-group">
        <span class="filter-label">Location:</span>
        <select class="filter-select" id="location-filter">
          <option value="">All Locations</option>
          <% locations.forEach(loc => { %>
            <option value="<%= loc %>"><%= loc %></option>
          <% }); %>
        </select>
      </div>
      <% } %>
    </div>

    <!-- ROI Hero Card -->
    <div class="roi-hero">
      <h3>Your Return on Investment <span class="roi-tooltip" data-tooltip="ROI is calculated based on $<%= user.reviewValueEstimate || 80 %> per positive review. You can change this value in Settings.">?</span></h3>
      <div class="roi-value" id="roi-display">Loading...</div>
      <div class="roi-details">
        <div class="roi-detail">
          <div class="roi-detail-label">Cost per Review</div>
          <div class="roi-detail-value" id="cost-per-review">--</div>
        </div>
        <div class="roi-detail">
          <div class="roi-detail-label">Value Generated</div>
          <div class="roi-detail-value" id="value-generated">--</div>
        </div>
        <div class="roi-detail">
          <div class="roi-detail-label">Net Value</div>
          <div class="roi-detail-value" id="net-value">--</div>
        </div>
      </div>
    </div>

    <!-- KPI Cards Grid -->
    <div class="kpi-grid">
      <!-- Average Rating Card -->
      <div class="kpi-card">
        <div class="kpi-header">
          <div class="kpi-label">
            Average Rating
            <span class="info-tooltip" data-tooltip="Average star rating (1-5) from customers who rated their experience. Higher is better!">?</span>
          </div>
          <div class="kpi-trend neutral" id="rating-trend">--</div>
        </div>
        <div class="kpi-value" id="avg-rating">--</div>
        <div class="kpi-subtext" id="rating-subtext">Loading...</div>
        <canvas class="kpi-chart" id="rating-chart" height="60"></canvas>
      </div>

      <!-- Total Reviews Card -->
      <div class="kpi-card">
        <div class="kpi-header">
          <div class="kpi-label">
            Total Reviews
            <span class="info-tooltip" data-tooltip="Total number of reviews collected. Positive reviews (4-5 stars) drive your ROI calculation.">?</span>
          </div>
          <div class="kpi-trend neutral" id="reviews-trend">--</div>
        </div>
        <div class="kpi-value" id="total-reviews">--</div>
        <div class="kpi-subtext" id="reviews-subtext">Loading...</div>
        <canvas class="kpi-chart" id="reviews-chart" height="60"></canvas>
      </div>

      <!-- Click Rate Card -->
      <div class="kpi-card">
        <div class="kpi-header">
          <div class="kpi-label">
            Click Rate
            <span class="info-tooltip" data-tooltip="Percentage of SMS recipients who clicked your review link. Industry average is 15-25%.">?</span>
          </div>
          <div class="kpi-trend neutral" id="click-trend">--</div>
        </div>
        <div class="kpi-value" id="click-rate">--</div>
        <div class="kpi-subtext" id="click-subtext">Loading...</div>
        <canvas class="kpi-chart" id="click-chart" height="60"></canvas>
      </div>

      <!-- Conversion Rate Card -->
      <div class="kpi-card">
        <div class="kpi-header">
          <div class="kpi-label">
            Conversion Rate
            <span class="info-tooltip" data-tooltip="Percentage of SMS recipients who completed a review. This shows your end-to-end effectiveness.">?</span>
          </div>
          <div class="kpi-trend neutral" id="conversion-trend">--</div>
        </div>
        <div class="kpi-value" id="conversion-rate">--</div>
        <div class="kpi-subtext" id="conversion-subtext">Loading...</div>
        <canvas class="kpi-chart" id="conversion-chart" height="60"></canvas>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
      <h3>Quick Actions</h3>
      <div class="actions-grid">
        <a href="/dashboard/send-sms" class="action-btn">Send SMS Request</a>
        <a href="/dashboard/qr-codes" class="action-btn">Generate QR Code</a>
        <a href="/dashboard/settings" class="action-btn">Configure ROI Settings</a>
        <a href="/dashboard/export" class="action-btn">Export Data</a>
      </div>
    </div>

    <!-- Timing Heatmap -->
    <div class="heatmap-section">
      <h3>ðŸ“… Best Times to Send</h3>
      <p class="heatmap-description">Optimize your SMS timing based on when customers are most likely to respond</p>

      <div id="heatmap-container">
        <div class="heatmap-loading">Loading timing data...</div>
      </div>

      <div class="heatmap-legend">
        <span><strong>Performance:</strong></span>
        <div class="legend-item">
          <div class="legend-color empty"></div>
          <span>No Data</span>
        </div>
        <div class="legend-item">
          <div class="legend-color very-low"></div>
          <span>Very Low</span>
        </div>
        <div class="legend-item">
          <div class="legend-color low"></div>
          <span>Low</span>
        </div>
        <div class="legend-item">
          <div class="legend-color medium"></div>
          <span>Medium</span>
        </div>
        <div class="legend-item">
          <div class="legend-color good"></div>
          <span>Good</span>
        </div>
        <div class="legend-item">
          <div class="legend-color excellent"></div>
          <span>Excellent</span>
        </div>
      </div>
    </div>
  </main>

  <script src="/js/analytics-dashboard.min.js?v=<%= typeof assetVersion !== 'undefined' ? assetVersion : '1.0.0' %>"></script>

  <%- include('../partials/dashboard-footer') %>
  <script src="/js/dashboard-menu.min.js?v=<%= typeof assetVersion !== 'undefined' ? assetVersion : '1.0.0' %>"></script>
</body>
</html>
