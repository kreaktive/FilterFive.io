<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/images/favicon-morestars.png">
  <title><%= title %></title>
  <%- include('../partials/gtm-head') %>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@400;500;600;700;800&family=Rubik:wght@700;800&display=swap" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter Tight', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #500B42;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      position: relative;
    }

    body::before {
      content: '';
      position: absolute;
      inset: 0;
      background-image: radial-gradient(rgba(255,255,255,0.03) 1px, transparent 1px);
      background-size: 30px 30px;
      pointer-events: none;
    }

    .container {
      width: 100%;
      max-width: 450px;
      position: relative;
      z-index: 1;
    }

    .card {
      background: white;
      border-radius: 24px;
      padding: 48px 40px;
      box-shadow: 0 25px 50px -12px rgba(255, 186, 73, 0.25);
    }

    .logo {
      text-align: center;
      margin-bottom: 32px;
    }

    .logo img {
      height: 32px;
      margin-bottom: 12px;
    }

    .logo p {
      font-size: 14px;
      color: #718096;
      margin-top: 8px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      font-size: 14px;
      font-weight: 600;
      color: #500B42;
      margin-bottom: 8px;
    }

    input[type="password"] {
      width: 100%;
      padding: 14px 16px;
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      font-size: 16px;
      font-family: inherit;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
      background: #f9fafb;
    }

    input[type="password"]:focus {
      outline: none;
      border-color: #FFBA49;
      box-shadow: 0 0 0 3px rgba(255, 186, 73, 0.1);
      background: white;
    }

    .error-message {
      background: #fee2e2;
      border-left: 4px solid #dc2626;
      padding: 12px 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      color: #991b1b;
      font-size: 14px;
    }

    .help-text {
      font-size: 12px;
      color: #718096;
      margin-top: 5px;
    }

    .btn {
      width: 100%;
      padding: 15px;
      background: #FFBA49;
      color: #500B42;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .btn:hover {
      transform: translateY(-2px);
      background: #500B42;
      color: white;
      box-shadow: 0 10px 25px rgba(255, 186, 73, 0.3);
    }

    .btn:active {
      transform: translateY(0);
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    .btn.loading {
      position: relative;
      color: transparent;
    }

    .btn.loading::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      top: 50%;
      left: 50%;
      margin: -10px 0 0 -10px;
      border: 2px solid #500B42;
      border-radius: 50%;
      border-top-color: transparent;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* Password match feedback */
    .match-feedback {
      display: flex;
      align-items: center;
      gap: 6px;
      margin-top: 8px;
      font-size: 13px;
      opacity: 0;
      transform: translateY(-3px);
      transition: opacity 0.2s, transform 0.2s;
    }

    .match-feedback.show {
      opacity: 1;
      transform: translateY(0);
    }

    .match-feedback.match {
      color: #22c55e;
    }

    .match-feedback.no-match {
      color: #dc2626;
    }

    .match-feedback svg {
      width: 14px;
      height: 14px;
      flex-shrink: 0;
    }

    .login-link {
      text-align: center;
      margin-top: 20px;
      font-size: 14px;
      color: #718096;
    }

    .login-link a {
      color: #FFBA49;
      text-decoration: none;
      font-weight: 600;
    }

    .login-link a:hover {
      text-decoration: underline;
    }

    .form-footer {
      margin-top: 24px;
      text-align: center;
      font-size: 12px;
      color: #718096;
    }

    .form-footer a {
      color: #718096;
      text-decoration: none;
    }

    .form-footer a:hover {
      text-decoration: underline;
    }

    /* Password Strength Indicator */
    .password-strength {
      display: flex;
      gap: 6px;
      align-items: center;
      margin-top: 10px;
      font-size: 13px;
    }

    .strength-req {
      display: flex;
      align-items: center;
      gap: 5px;
      color: #a0aec0;
      transition: color 0.2s;
    }

    .strength-req.met {
      color: #22c55e;
    }

    .strength-req svg {
      width: 14px;
      height: 14px;
    }

    @media (max-width: 480px) {
      .card {
        padding: 32px 24px;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/gtm-body') %>

  <div class="container">
    <div class="card">
      <div class="logo">
        <img src="/images/Logo MoreStars.io.svg" alt="MoreStars Logo" height="32">
        <p>Create Your New Password</p>
      </div>

      <% if (error) { %>
        <div class="error-message"><%= error %></div>
      <% } %>

      <form method="POST" action="/reset-password/<%= token %>">
        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

        <div class="form-group">
          <label for="password">New Password</label>
          <input type="password" id="password" name="password" placeholder="Min 12 characters" required minlength="12" autocomplete="new-password">
          <div class="password-strength">
            <span class="strength-req" id="lengthReq">
              <svg viewBox="0 0 20 20" fill="currentColor"><circle cx="10" cy="10" r="5"/></svg>
              <span>12+ characters</span>
            </span>
          </div>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-enter password" required minlength="12" autocomplete="new-password">
          <div id="matchFeedback" class="match-feedback">
            <svg viewBox="0 0 20 20" fill="currentColor"><circle cx="10" cy="10" r="8"/></svg>
            <span id="matchText"></span>
          </div>
        </div>

        <button type="submit" class="btn" id="submitBtn">Reset Password</button>
      </form>

      <p class="login-link">
        Remember your password? <a href="/dashboard/login">Log In</a>
      </p>

      <div class="form-footer">
        <a href="/privacy-policy">Privacy</a> &bull; <a href="/terms-of-service">Terms</a>
      </div>
    </div>
  </div>

  <script<%- typeof cspNonce !== 'undefined' ? ` nonce="${cspNonce}"` : '' %>>
    var passwordInput = document.getElementById('password');
    var confirmInput = document.getElementById('confirmPassword');
    var lengthReq = document.getElementById('lengthReq');
    var submitBtn = document.getElementById('submitBtn');
    var matchFeedback = document.getElementById('matchFeedback');
    var matchText = document.getElementById('matchText');

    var checkSvg = '<svg viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>';
    var circleSvg = '<svg viewBox="0 0 20 20" fill="currentColor"><circle cx="10" cy="10" r="5"/></svg>';
    var xSvg = '<svg viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>';

    // Password length validation
    passwordInput.addEventListener('input', function() {
      var hasLength = this.value.length >= 12;

      if (hasLength) {
        lengthReq.classList.add('met');
        lengthReq.querySelector('svg').outerHTML = checkSvg;
      } else {
        lengthReq.classList.remove('met');
        lengthReq.querySelector('svg').outerHTML = circleSvg;
      }

      // Also update match feedback if confirm has a value
      if (confirmInput.value) {
        updateMatchFeedback();
      }
    });

    // Real-time password match feedback
    function updateMatchFeedback() {
      var password = passwordInput.value;
      var confirm = confirmInput.value;

      if (!confirm) {
        matchFeedback.classList.remove('show', 'match', 'no-match');
        confirmInput.style.borderColor = '#e2e8f0';
        return;
      }

      matchFeedback.classList.add('show');

      if (password === confirm) {
        matchFeedback.classList.remove('no-match');
        matchFeedback.classList.add('match');
        matchFeedback.querySelector('svg').outerHTML = checkSvg;
        matchText.textContent = 'Passwords match';
        confirmInput.style.borderColor = '#22c55e';
      } else {
        matchFeedback.classList.remove('match');
        matchFeedback.classList.add('no-match');
        matchFeedback.querySelector('svg').outerHTML = xSvg;
        matchText.textContent = 'Passwords do not match';
        confirmInput.style.borderColor = '#dc2626';
      }
    }

    confirmInput.addEventListener('input', updateMatchFeedback);

    // Form submission with loading state and validation
    document.querySelector('form').addEventListener('submit', function(e) {
      if (passwordInput.value !== confirmInput.value) {
        e.preventDefault();
        updateMatchFeedback();
        confirmInput.focus();
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      submitBtn.classList.add('loading');

      // Re-enable after 10s in case of error
      setTimeout(function() {
        submitBtn.disabled = false;
        submitBtn.classList.remove('loading');
      }, 10000);
    });
  </script>
</body>
</html>
