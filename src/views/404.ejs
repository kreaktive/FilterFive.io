<%- include('partials/head', {
  title: 'Page Not Found - MoreStars',
  description: 'The page you are looking for could not be found.',
  noindex: true
}) %>

  <% const activePage = ''; %>

  <%- include('partials/navbar') %>

  <!-- 404 Hero Section -->
  <section class="min-h-[70vh] flex items-center justify-center bg-[#F9F7FA] relative overflow-hidden">
    <!-- Background decoration - brand gold glow -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-[#FFBA49]/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-[#FFBA49]/10 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 text-center relative z-10">
      <!-- Large 404 -->
      <h1 class="text-[150px] md:text-[200px] font-bold text-[#500B42] leading-none mb-4">
        404
      </h1>

      <!-- Message -->
      <h2 class="text-3xl md:text-4xl font-bold text-[#500B42] mb-4">
        Oops! This page doesn't exist.
      </h2>
      <p class="text-gray-600 text-lg max-w-md mx-auto mb-8">
        The page you're looking for might have been moved or deleted. Let's get you back on track.
      </p>

      <!-- Search Box -->
      <form action="/blog" method="GET" class="max-w-md mx-auto mb-8">
        <div class="relative">
          <input
            type="text"
            name="q"
            placeholder="Search our blog..."
            aria-label="Search blog"
            class="w-full px-6 py-4 pr-14 rounded-full border-2 border-gray-200 focus:border-[#FFBA49] focus:outline-none focus-visible:ring-2 focus-visible:ring-[#FFBA49] focus-visible:ring-offset-2 text-gray-700 placeholder-gray-400 transition-colors"
          >
          <button
            type="submit"
            class="absolute right-2 top-1/2 -translate-y-1/2 p-3 bg-[#FFBA49] text-[#500B42] rounded-full hover:bg-[#e5a63f] transition-colors"
            aria-label="Search"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        </div>
      </form>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/" class="inline-flex items-center px-8 py-4 bg-[#FFBA49] text-[#500B42] font-semibold rounded-full hover:bg-[#e5a63f] transition-all duration-300 shadow-lg hover:shadow-xl">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Go Home
        </a>
        <a href="/pricing" class="inline-flex items-center px-8 py-4 bg-white text-[#500B42] font-semibold rounded-full border-2 border-[#500B42] hover:bg-gray-100 transition-all duration-300">
          View Pricing
        </a>
      </div>

      <!-- Quick Links -->
      <div class="mt-12 pt-8 border-t border-gray-200 max-w-2xl mx-auto">
        <p class="text-gray-500 text-sm mb-4">Or try one of these popular pages:</p>
        <div class="flex flex-wrap items-center justify-center gap-4 text-sm">
          <a href="/how-it-works" class="text-[#500B42] hover:text-[#500B42] font-medium underline underline-offset-2">How It Works</a>
          <span class="text-gray-300">|</span>
          <a href="/features" class="text-[#500B42] hover:text-[#500B42] font-medium underline underline-offset-2">Features</a>
          <span class="text-gray-300">|</span>
          <a href="/faq" class="text-[#500B42] hover:text-[#500B42] font-medium underline underline-offset-2">FAQ</a>
          <span class="text-gray-300">|</span>
          <a href="/blog" class="text-[#500B42] hover:text-[#500B42] font-medium underline underline-offset-2">Blog</a>
          <span class="text-gray-300">|</span>
          <a href="mailto:support@morestars.io" class="text-[#500B42] hover:text-[#500B42] font-medium underline underline-offset-2">Contact</a>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/marketing-footer') %>

</body>
</html>
