  }

  /* Text reveal animation */
  .text-reveal {
    overflow: hidden;
  }
  .text-reveal span {
    display: inline-block;
    transform: translateY(100%);
    animation: text-reveal-up 0.6s forwards;
  }
  @keyframes text-reveal-up {
