<!-- Pricing Card Component -->
<!--
  Usage: <%- include('partials/pricing-card', {
    plan: {
      name: 'The Growth Plan',
      description: 'Everything you need to dominate your local market.',
      monthlyPrice: 77,
      annualPrice: 770,
      features: [
        { title: '1,000 SMS Requests / mo', description: 'Reach customers directly on their phone.' },
        { title: 'Unlimited QR Codes', description: 'For receipts, front desk, or vehicles.' }
      ],
      highlighted: true  // optional
    }
  }) %>
-->

<div class="bg-white rounded-3xl shadow-2xl border border-gray-100 overflow-hidden max-w-4xl mx-auto flex flex-col md:flex-row relative">
  <!-- Best Value Badge (shown for annual) -->
  <div id="bestValueBadge" class="absolute top-0 right-0 bg-green-500 text-white text-xs font-bold px-4 py-2 rounded-bl-xl z-20 shadow-sm hidden">
    2 MONTHS FREE
  </div>

  <!-- Left Side: Features -->
  <div class="p-8 md:p-12 md:w-3/5 border-b md:border-b-0 md:border-r border-gray-100">
    <h3 class="text-2xl font-bold mb-2" style="color: #500B42;"><%= plan.name %></h3>
    <p class="text-gray-500 mb-8"><%= plan.description %></p>

    <div class="space-y-5">
      <% plan.features.forEach(function(feature) { %>
      <li class="flex items-start gap-3">
        <div class="p-1 rounded-full bg-green-100 text-green-600 mt-0.5">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
        </div>
        <div>
          <span class="font-bold text-gray-800"><%= feature.title %></span>
          <% if (feature.description) { %>
          <p class="text-xs text-gray-500"><%= feature.description %></p>
          <% } %>
        </div>
      </li>
      <% }); %>
    </div>
  </div>

  <!-- Right Side: Price & CTA -->
  <div class="p-8 md:p-12 md:w-2/5 bg-gray-50 flex flex-col justify-center items-center text-center relative">
    <div class="mb-2">
      <span id="priceAmount" class="text-6xl font-extrabold tracking-tight" style="color: #500B42;">
        $<%= plan.monthlyPrice %>
      </span>
    </div>
    <p id="pricePeriod" class="text-gray-500 mb-6">per month</p>

    <a href="/signup" class="w-full py-4 rounded-full font-bold text-lg shadow-lg hover:shadow-xl transition-all flex items-center justify-center gap-2 bg-[#FFBA49] text-[#500B42] hover:bg-[#f0ad3d]">
      Start Free Trial
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
    </a>

    <p class="text-xs text-gray-400 mt-4">14-day free trial. No credit card.</p>

    <!-- Guarantee -->
    <div class="mt-6 pt-6 border-t border-gray-200 w-full">
      <div class="flex items-center justify-center gap-2 text-sm text-gray-600">
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        <span class="font-medium">Cancel anytime. No contracts.</span>
      </div>
    </div>
  </div>
</div>
