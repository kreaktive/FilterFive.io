<%- include('partials/dashboard-head', { title: title }) %>
  <style>
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-6);
      flex-wrap: wrap;
      gap: var(--space-4);
    }

    .page-header h2 {
      font-size: var(--text-3xl);
      color: var(--text-primary);
      margin: 0;
    }

    .new-upload-btn {
      background: var(--brand-gold);
      color: var(--brand-dark);
      padding: 12px 24px;
      border-radius: var(--radius-md);
      text-decoration: none;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: var(--space-2);
      transition: all var(--transition-base);
    }

    .new-upload-btn:hover {
      background: var(--brand-gold-dark);
      transform: translateY(-2px);
    }

    .history-table {
      width: 100%;
      background: var(--bg-white);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-sm);
    }

    .history-table table {
      width: 100%;
      border-collapse: collapse;
    }

    .history-table th,
    .history-table td {
      padding: var(--space-4);
      text-align: left;
      border-bottom: 1px solid var(--border-light);
    }

    .history-table th {
      background: var(--bg-light);
      font-weight: 600;
      color: var(--text-primary);
      font-size: var(--text-sm);
    }

    .history-table td {
      color: var(--text-secondary);
      font-size: var(--text-sm);
    }

    .history-table tr:hover {
      background: var(--bg-light);
    }

    .history-table tbody tr {
      cursor: pointer;
      transition: background var(--transition-base);
    }

    .history-table tbody tr:hover {
      background: var(--bg-light);
    }

    .history-table tr:last-child td {
      border-bottom: none;
    }

    .status-badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-badge.completed {
      background: #D1FAE5;
      color: #065F46;
    }

    .status-badge.failed {
      background: #FEE2E2;
      color: #991B1B;
    }

    .status-badge.partial {
      background: #FEF3C7;
      color: #92400E;
    }

    .status-badge.processing {
      background: #DBEAFE;
      color: #1E40AF;
    }

    .status-badge.not_started {
      background: #E5E7EB;
      color: #374151;
    }

    .status-badge.in_progress {
      background: #FEF3C7;
      color: #92400E;
    }

    .empty-state {
      text-align: center;
      padding: var(--space-16) var(--space-5);
      background: var(--bg-white);
      border: 1px solid var(--border-light);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-sm);
    }

    .empty-state-icon {
      font-size: 64px;
      margin-bottom: var(--space-5);
    }

    .empty-state h2 {
      color: var(--text-primary);
      margin-bottom: var(--space-2);
    }

    .empty-state p {
      color: var(--text-secondary);
      margin-bottom: var(--space-5);
    }

    .number-badge {
      font-weight: 600;
      color: var(--text-primary);
    }

    .success-count {
      color: var(--success);
    }

    .failed-count {
      color: var(--danger);
    }

    .duplicate-count {
      color: var(--warning);
    }

    .table-footer {
      margin-top: var(--space-5);
      text-align: center;
    }

    .table-footer p {
      color: var(--text-muted);
      font-size: var(--text-sm);
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: var(--space-2);
      color: var(--brand-gold);
      text-decoration: none;
      font-weight: 500;
      margin-top: var(--space-6);
      transition: color var(--transition-base);
    }

    .back-link:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .page-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .new-upload-btn {
        width: 100%;
        justify-content: center;
      }

      .history-table {
        display: block;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }

      .history-table table {
        min-width: 700px;
      }

      .history-table th,
      .history-table td {
        padding: 12px 10px;
        font-size: var(--text-sm);
      }
    }
  </style>
</head>
<body>
  <%- include('partials/dashboard-header', { activePage: 'upload' }) %>

  <main class="container">
    <div class="page-header">
      <h2><%= title %></h2>
      <a href="/dashboard/upload" class="new-upload-btn">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="17 8 12 3 7 8"></polyline>
          <line x1="12" y1="3" x2="12" y2="15"></line>
        </svg>
        New Upload
      </a>
    </div>

    <% if (uploads && uploads.length > 0) { %>
      <div class="history-table">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Filename</th>
              <th>Total</th>
              <th>Success</th>
              <th>Failed</th>
              <th>Duplicates</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% uploads.forEach(function(upload) { %>
              <tr onclick="window.location='/dashboard/uploads/<%= upload.id %>'" title="Click to view details">
                <td>
                  <%= new Date(upload.createdAt).toLocaleDateString() %><br>
                  <small style="color: var(--text-muted);"><%= new Date(upload.createdAt).toLocaleTimeString() %></small>
                </td>
                <td>
                  <strong><%= upload.filename %></strong>
                </td>
                <td class="number-badge"><%= upload.totalRows %></td>
                <td>
                  <span class="success-count">
                    &#10003; <%= upload.successCount %>
                  </span>
                </td>
                <td>
                  <% if (upload.failedCount > 0) { %>
                    <span class="failed-count">
                      &#10007; <%= upload.failedCount %>
                    </span>
                  <% } else { %>
                    <span style="color: var(--text-muted);">-</span>
                  <% } %>
                </td>
                <td>
                  <% if (upload.duplicateCount > 0) { %>
                    <span class="duplicate-count">
                      &#9888; <%= upload.duplicateCount %>
                    </span>
                  <% } else { %>
                    <span style="color: var(--text-muted);">-</span>
                  <% } %>
                </td>
                <td>
                  <span class="status-badge <%= upload.status %>">
                    <%= upload.status === 'in_progress' ? 'In Progress' : upload.status === 'not_started' ? 'Not Started' : upload.status.charAt(0).toUpperCase() + upload.status.slice(1) %>
                  </span>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="table-footer">
        <p>Showing last 50 uploads</p>
      </div>
    <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">&#128196;</div>
        <h2>No Uploads Yet</h2>
        <p>You haven't uploaded any CSV files yet.</p>
        <a href="/dashboard/upload" class="new-upload-btn">
          Upload Your First File
        </a>
      </div>
    <% } %>

    <div style="text-align: center;">
      <a href="/dashboard" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5"></path>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Dashboard
      </a>
    </div>
  </main>

  <%- include('partials/dashboard-footer') %>
</body>
</html>
