# FilterFive Development Environment Variables
# Copy this file to .env and update with your actual credentials

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Generate a strong random secret (64+ characters recommended):
# openssl rand -hex 32
SESSION_SECRET=your-secret-key-change-this-in-production

# API key for Zapier webhooks
API_SECRET=your-api-secret-for-zapier-webhooks

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST=db
DB_PORT=5432
DB_NAME=filterfive
DB_USER=postgres
DB_PASSWORD=your-secure-password

# =============================================================================
# TWILIO (SMS)
# =============================================================================
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# RESEND (EMAIL)
# =============================================================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=info@yourdomain.com

# IMPORTANT: Domain must be verified in Resend dashboard
# Verify at: https://resend.com/domains

# =============================================================================
# STRIPE (PAYMENTS)
# =============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx
