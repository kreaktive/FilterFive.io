{
  "name": "morestars",
  "version": "1.0.0",
  "description": "B2B SaaS reputation management tool",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "db:migrate": "node src/scripts/runMigrations.js",
    "db:sync": "node src/config/migrations.js",
    "db:seed": "node src/seeders/init.js",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js --selectProjects unit",
    "test:integration": "jest --config jest.config.js --selectProjects integration",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:email": "node src/scripts/testEmail.js",
    "test:legacy": "node tests/test-password-validation.js && node tests/test-user-methods.js",
    "set:superadmin": "node src/scripts/setSuperAdmin.js",
    "build:css": "tailwindcss -i src/css/tailwind.css -o public/css/tailwind.css --minify",
    "build:homepage-css": "cleancss -o public/css/homepage.min.css public/css/homepage.css",
    "build:js": "terser public/js/homepage.js -o public/js/homepage.min.js -c -m",
    "build:dashboard-js": "terser public/js/analytics-dashboard.js -o public/js/analytics-dashboard.min.js -c -m && terser public/js/feedback-manager.js -o public/js/feedback-manager.min.js -c -m && terser public/js/form-validation.js -o public/js/form-validation.min.js -c -m && terser public/js/dashboard-menu.js -o public/js/dashboard-menu.min.js -c -m && terser public/js/chart-utils.js -o public/js/chart-utils.min.js -c -m && terser public/js/subscription.js -o public/js/subscription.min.js -c -m",
    "build": "npm run build:css && npm run build:homepage-css && npm run build:js && npm run build:dashboard-js",
    "validate:env": "node src/config/envValidator.js",
    "prebuild": "npm run validate:env",
    "prestart": "npm run validate:env"
  },
  "keywords": [
    "reputation-management",
    "feedback",
    "sms",
    "reviews"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@portabletext/to-html": "^2.0.17",
    "@sanity/client": "^6.29.1",
    "@sentry/node": "^10.30.0",
    "@shopify/shopify-api": "^12.2.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-recaptcha": "^5.1.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "p-limit": "^3.1.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "resend": "^3.0.0",
    "sequelize": "^6.35.2",
    "square": "^43.2.1",
    "stripe": "^14.10.0",
    "twilio": "^4.19.0",
    "underscore": "^1.13.7",
    "uuid": "^9.0.1",
    "validator": "^13.15.26",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@faker-js/faker": "^10.1.0",
    "clean-css-cli": "^5.6.3",
    "jest": "^29.7.0",
    "jest-extended": "^7.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.1"
  },
  "jest": {
    "preset": "./jest.config.js"
  }
}
